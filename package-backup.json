{
  "name": "pet-care-management-app",
  "version": "1.0.0",
  "description": "A comprehensive pet care management web application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-admin": "node scripts/createAdmin.js",
    
    "kill-port": "npx kill-port 3000",
    "test:clear": "cls && npm run test:tasks:integration",
    
    "test": "node tests/test-runner.js",
    "test:all": "node tests/test-runner-all.js",
    "test:sequential": "npm run test:auth && npm run test:notifications && npm run test:tasks:all && npm run test:calendar:integration",
    
    "test:auth": "node tests/run-auth-tests.js",
    "test:auth:debug": "node -e \"const AuthTests = require('./tests/auth-tests'); const TestSummary = require('./tests/test-summary'); const tests = new AuthTests(new TestSummary()); tests.runAllTests().then(() => tests.cleanup()).then(() => setTimeout(() => process.exit(0), 1000)).catch(err => { console.error(err); process.exit(1); });\""
    ,
    "test:tasks:api": "jest tests/task-api.test.js --config=jest.config.js --testTimeout=10000",
    "test:tasks:integration": "jest tests/task-integration.test.js --config=jest.config.js --testTimeout=120000",
    "test:calendar:integration": "jest tests/calendar-ui-integration.test.js --config=jest.config.js --testTimeout=60000",
    "test:calendar-ui": "jest tests/calendar-ui.test.js --config=jest.config.js --testTimeout=60000",
    "test:calendar-all": "jest tests/calendar*.test.js --config=jest.config.js --testTimeout=60000",
    "test:notifications": "node tests/notification-test-runner.js",
    "test:notifications:model": "jest tests/notification-model.test.js --config=jest.config.js",
    "test:notifications:service": "jest tests/notification-service.test.js --config=jest.config.js",
    "test:notifications:routes": "jest tests/notification-routes.test.js --config=jest.config.js",
    "test:notifications:integration": "jest tests/notification-integration.test.js --config=jest.config.js --testTimeout=30000",
    "test:tasks:all": "npm run test:tasks:api && npm run test:tasks:integration",
    "test:full-suite": "npm run test:auth && npm run test:notifications && npm run test:tasks:api && npm run test:tasks:integration",
    "test:ui": "jest tests/*-ui.test.js --config=jest.config.js --runInBand",

    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "npm run cypress:run",
    "test:accessibility": "cypress run --spec 'cypress/e2e/accessibility/**/*'",
    "test:ci": "start-server-and-test start http://localhost:3000 cypress:run",
    "test:mvp": "cypress run --spec \"cypress/e2e/mvp-core-tests.cy.js\"",
    "test:accessibility:basic": "cypress run --spec \"cypress/e2e/basic-accessibility.cy.js\"",
    "test:week5": "npm run test:mvp && npm run test:accessibility:basic"
  },
  "keywords": [
    "pet",
    "care",
    "management",
    "nodejs",
    "mysql"
  ],
  "author": "Ali Abubaker",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.once": "^4.1.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.0",
    "nodemailer": "^6.10.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.1",
    "axe-core": "^4.11.0",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^21.11.0",
    "start-server-and-test": "^2.1.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}