{
  "name": "pet-care-management-app",
  "version": "1.0.0",
  "description": "A comprehensive pet care management web application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-admin": "node scripts/createAdmin.js",
    "test": "node tests/test-runner.js",
    "test:auth": "node -e \"const AuthTests = require('./tests/auth-tests'); const TestSummary = require('./tests/test-summary'); const tests = new AuthTests(new TestSummary()); tests.runAllTests().then(() => tests.cleanup());\"",
    "test:pets": "node -e \"console.log('Run npm test instead - pet tests need a valid user from auth tests'); process.exit(1);\"",
    "test:tasks:api": "jest tests/task-api.test.js --verbose --detectOpenHandles --forceExit --testTimeout=10000",
    "test:integration:with-server": "node tests/start-server-and-test.js",
    "test:tasks:integration": "jest tests/task-integration.test.js --verbose --testTimeout=120000 --detectOpenHandles --forceExit",
    "test:tasks:all": "npm run test:tasks:api && npm run test:tasks:integration",
    "test:all": "npm run test && npm run test:tasks:all",
    "kill-port": "npx kill-port 3000",
    "test:clear": "cls && npm run test:tasks:integration",
    "test:notifications": "node tests/notification-test-runner.js",
    "test:notifications:model": "jest tests/notification-model.test.js --config=jest.config.js",
    "test:notifications:service": "jest tests/notification-service.test.js --config=jest.config.js",
    "test:notifications:routes": "jest tests/notification-routes.test.js --config=jest.config.js",
    "test:notifications:integration": "jest tests/notification-integration.test.js --config=jest.config.js --testTimeout=30000",
    "test:all:with-notifications": "npm run test && npm run test:notifications"
  },
  "keywords": [
    "pet",
    "care",
    "management",
    "nodejs",
    "mysql"
  ],
  "author": "Ali Abubaker",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.0",
    "nodemailer": "^6.10.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^21.11.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}