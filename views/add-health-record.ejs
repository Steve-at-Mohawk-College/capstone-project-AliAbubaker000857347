<%- include('partials/header', {title: 'Add Health Record'}) %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card card-custom">
      <div class="card-body p-4">
        <h1 class="h3 mb-4 text-center">Add Health Record</h1>
        
        <% if (typeof message !== 'undefined' && message) { %>
          <div class="alert alert-info"><%= message %></div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <% if (pets.length === 0) { %>
          <div class="alert alert-warning">
            No pets available. Please <a href="/pets/add">add a pet</a> first.
          </div>
        <% } else { %>
          <form action="/health" method="POST">
            <div class="mb-3">
              <label for="pet_id" class="form-label">Pet *</label>
              <select class="form-select" id="pet_id" name="pet_id" required>
                <option value="">Select a Pet</option>
                <% pets.forEach(pet => { %>
                  <option value="<%= pet.pet_id %>" <%= (typeof selectedPetId !== 'undefined' && selectedPetId == pet.pet_id) ? 'selected' : '' %>>
                    <%= pet.name %> (<%= pet.species %>)
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="weight" class="form-label">Weight (kg)</label>
                  <input type="number" step="0.1" class="form-control" id="weight" name="weight" placeholder="e.g., 5.2">
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="date_recorded" class="form-label">Record Date *</label>
                  <input type="date" class="form-control" id="date_recorded" name="date_recorded" required 
                         value="<%= new Date().toISOString().split('T')[0] %>">
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="diet" class="form-label">Diet</label>
              <input type="text" class="form-control" id="diet" name="diet" placeholder="e.g., Kibble, Wet food, Raw diet">
            </div>

            <div class="mb-3">
              <label for="medical_notes" class="form-label">Medical Notes</label>
              <textarea class="form-control" id="medical_notes" name="medical_notes" rows="3" placeholder="Any medical observations, symptoms, or notes..."></textarea>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="vet_visit_date" class="form-label">Vet Visit Date</label>
                  <input type="date" class="form-control" id="vet_visit_date" name="vet_visit_date">
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="vaccination_date" class="form-label">Vaccination Date</label>
                  <input type="date" class="form-control" id="vaccination_date" name="vaccination_date">
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="next_vaccination_date" class="form-label">Next Vaccination</label>
                  <input type="date" class="form-control" id="next_vaccination_date" name="next_vaccination_date">
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-custom w-100 btn-lg">Save Health Record</button>
          </form>
        <% } %>

        <div class="mt-4 text-center">
          <a href="/health-tracker">‚Üê Back to Health Tracker</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>