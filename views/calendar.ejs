<%- include('partials/header', {title: 'Calendar - Pet Care Management'}) %>

<style>
    .calendar-container {
        background: linear-gradient(135deg, var(--light-card) 0%, rgba(0, 204, 61, 0.95) 100%);
        border: none;
        border-radius: 24px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 
            0 10px 40px rgba(0,0,0,0.08),
            0 2px 10px rgba(0,0,0,0.03);
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
    }

    .calendar-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--accent) 0%, #8A2BE2 50%, #00D4AA 100%);
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0,0,0,0.06);
        position: relative;
    }

    .calendar-nav {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .calendar-title {
         font-size: 1.75rem;
    font-weight: 700;
    margin: 0;
    color: var(--light-text);
    min-width: 200px;
    text-align: center;
    }

    .calendar-nav button {
        background: var(--light-bg);
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 12px;
        padding: 0.75rem;
        font-weight: 700;
        transition: all 0.3s ease;
        color: var(--light-text);
    }

    .calendar-nav button:hover {
        background: var(--accent);
        color: rgb(0, 241, 32);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
    }

    .calendar-actions {
        display: flex;
        gap: 1rem;
    }

    .calendar-actions .btn {
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
    }

    .calendar-actions .btn-primary {
        background: linear-gradient(135deg, var(--accent) 0%, #5a7aff 100%);
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
    }

    .calendar-actions .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .calendar-actions .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }

    .calendar-grid {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .calendar-week {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 0.75rem;
    }

    .calendar-day-header {
        text-align: center;
        font-weight: 700;
        color: var(--light-muted);
        padding: 1rem 0.5rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: rgba(0,0,0,0.02);
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.03);
    }

    .calendar-day {
        background: rgb(206, 0, 0);
        border: 1px solid rgba(0,0,0,0.06);
        border-radius: 16px;
        padding: 1rem 0.75rem;
        min-height: 120px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .calendar-day::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: transparent;
        transition: all 0.3s ease;
    }

    .calendar-day:hover {
        background: linear-gradient(135deg, #0026ff 0%, #ec0000 100%);
        border-color: var(--accent);
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 25px rgba(67, 97, 238, 0.15);
    }

    .calendar-day:hover::before {
        background: linear-gradient(90deg, var(--accent) 0%, #8A2BE2 100%);
    }

    .calendar-day.today {
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.08) 0%, rgba(67, 97, 238, 0.02) 100%);
        border: 2px solid var(--accent);
    }

    .calendar-day.today::before {
        background: var(--accent);
    }

    .calendar-day.selected {
        background: linear-gradient(135deg, var(--accent) 0%, #5a7aff 100%);
        color: rgb(233, 0, 0);
        border-color: var(--accent);
        transform: scale(1.02);
        box-shadow: 0 8px 25px rgba(67, 97, 238, 0.3);
    }

    .calendar-day.selected .day-number {
        color: rgb(255, 0, 0);
    }

    .calendar-day.empty {
        background: transparent;
        border-color: transparent;
        cursor: default;
    }

    .calendar-day.empty:hover {
        background: transparent;
        transform: none;
        box-shadow: none;
    }

    .day-number {
        font-weight: 700;
        margin-bottom: 0.75rem;
        font-size: 1rem;
        color: var(--light-text);
        position: relative;
        z-index: 2;
    }

    .task-indicators {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .task-indicator {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.6rem;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 600;
        background: rgba(67, 97, 238, 0.1);
        border: 1px solid rgba(67, 97, 238, 0.15);
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;
    }

    .task-indicator:hover {
        transform: translateX(2px);
    }

    .task-indicator.high {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.12) 0%, rgba(220, 53, 69, 0.06) 100%);
        border-color: rgba(220, 53, 69, 0.2);
        color: #dc3545;
    }

    .task-indicator.medium {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.12) 0%, rgba(255, 193, 7, 0.06) 100%);
        border-color: rgba(255, 193, 7, 0.2);
        color: #ffc107;
    }

    .task-indicator.low {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.12) 0%, rgba(40, 167, 69, 0.06) 100%);
        border-color: rgba(40, 167, 69, 0.2);
        color: #28a745;
    }

    .more-tasks {
        text-align: center;
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--light-muted);
        background: rgba(108, 117, 125, 0.1);
        border-radius: 8px;
        padding: 0.2rem 0.4rem;
        margin-top: 0.2rem;
    }

    .task-item-calendar {
        background: rgb(216, 0, 0);
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

    .task-item-calendar:hover {
        background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
        border-color: var(--accent);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(67, 97, 238, 0.15);
    }

    /* Modal enhancements */
    .modal-content {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, var(--light-card) 0%, rgba(255,255,255,0.95) 100%);
        border-bottom: 1px solid rgba(0,0,0,0.06);
        padding: 1.5rem 2rem;
    }

    .modal-title {
        font-weight: 700;
        background: linear-gradient(135deg, var(--light-text) 0%, var(--accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Dark theme support */
    [data-theme="dark"] .calendar-container {
        background: linear-gradient(135deg, var(--dark-card) 0%, rgba(30,30,40,0.95) 100%);
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }

    [data-theme="dark"] .calendar-header {
        border-bottom-color: rgba(255,255,255,0.1);
    }

    [data-theme="dark"] .calendar-day {
        background: var(--dark-bg);
        border-color: rgba(255,255,255,0.1);
    }

    [data-theme="dark"] .calendar-day:hover {
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.1) 0%, rgba(30,30,40,0.8) 100%);
    }

    [data-theme="dark"] .calendar-day-header {
        background: rgba(255,255,255,0.05);
        border-color: rgba(255,255,255,0.1);
        color: rgba(255,255,255,0.8);
    }
    [data-theme="dark"] .calendar-nav button {
    color: #000000; /* Arrow color for dark theme */
}

    [data-theme="dark"] .task-item-calendar {
        background: var(--dark-bg);
        border-color: rgba(255,255,255,0.1);
    }

    [data-theme="dark"] .modal-header {
        background: linear-gradient(135deg, var(--dark-card) 0%, rgba(30,30,40,0.95) 100%);
        border-bottom-color: rgba(255,255,255,0.1);
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .calendar-container {
            padding: 1.5rem;
            margin: 0 0.5rem 1.5rem 0.5rem;
            border-radius: 20px;
        }
        
        .calendar-header {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
        }
        
        .calendar-nav {
            order: 2;
        }
        
        .calendar-actions {
            order: 1;
            width: 100%;
            justify-content: center;
        }
        
        .calendar-title {
            min-width: auto;
            font-size: 1.5rem;
        }
        
        .calendar-day {
            min-height: 100px;
            padding: 0.75rem 0.5rem;
        }
        
        .task-indicators {
            gap: 0.2rem;
        }
        
        .task-indicator {
            padding: 0.3rem 0.4rem;
            font-size: 0.7rem;
        }
        
        .calendar-week {
            gap: 0.5rem;
        }
    }

    @media (max-width: 480px) {
        .calendar-container {
            padding: 1rem;
        }
        
        .calendar-day {
            min-height: 80px;
            padding: 0.5rem 0.25rem;
        }
        
        .day-number {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        
        .task-indicator {
            padding: 0.2rem 0.3rem;
            font-size: 0.65rem;
        }
    }
</style>

<link rel="stylesheet" href="/css/calendar.css">

<div class="calendar-container">
    <div class="calendar-header">
        <div class="calendar-nav">
            <button class="btn btn-secondary" id="prevMonth">
                <i class="bi bi-chevron-left"></i>
            </button>
            <h2 class="calendar-title" id="calendarMonthYear"></h2>
            <button class="btn btn-secondary" id="nextMonth">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
        <div class="calendar-actions">
            <button class="btn btn-primary" id="todayBtn">
                <i class="bi bi-calendar-event"></i> Today
            </button>
            <button class="btn btn-success" id="addCalendarEvent">
                <i class="bi bi-plus-circle"></i> Add Task
            </button>
        </div>
    </div>

    <div class="calendar-grid" id="calendarGrid">
        <!-- Calendar will be rendered here by JavaScript -->
    </div>
</div>

<!-- Day Tasks Modal -->
<div class="modal fade" id="dayTasksModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dayTasksModalLabel">Day Tasks</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="dayTasksModalBody">
                <!-- Tasks will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/calendar.js"></script>

<%- include('partials/footer') %>