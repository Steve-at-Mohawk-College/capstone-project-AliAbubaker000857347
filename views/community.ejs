<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community - Pet Care</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --accent-color: #4cc9f0;
            --success-color: #06d6a0;
            --warning-color: #ffd166;
            --danger-color: #ef476f;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --border-radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s ease;
        }

        body.community-page {
            padding-top: 0 !important;
            margin: 0 !important;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            transition: background 0.3s ease;
        }

        .navbar-modern {
            position: relative !important;
            top: auto !important;
        }

        .community-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* ===== ENHANCED CARD STYLES ===== */
        .card-modern {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
            background: white;
            overflow: hidden;
        }

        .card-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .card-header-modern {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            padding: 1.25rem 1.5rem;
            font-weight: 600;
        }

        .card-header-modern h2,
        .card-header-modern h3 {
            margin: 0;
            color: white;
        }

        /* ===== POST STYLES ===== */
        .post-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: var(--transition);
        }

        .post-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.1);
        }

        .post-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .post-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 1rem;
            flex-shrink: 0;
            border: 3px solid #e9ecef;
            overflow: hidden;
        }

        .post-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .post-meta {
            flex: 1;
        }

        .post-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.25rem;
            line-height: 1.3;
            text-align: left;
        }

        .post-author {
            color: var(--primary-color);
            font-weight: 600;
            /* Increased weight for better visibility */
            font-size: 0.9rem;
            background-color: rgba(67, 97, 238, 0.1);
            /* Light background for better contrast */
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            display: inline-block;
        }

        .post-time {
            color: #6c757d;
            font-size: 0.8rem;
        }

        .post-content {
            color: var(--dark-color);
            line-height: 1.6;
            margin-bottom: 1rem;
            white-space: pre-wrap;
            /* Keep this if you need line breaks */
            word-wrap: break-word;
            text-align: left;
            unicode-bidi: plaintext;
            /* Better handling of text direction */
        }

        /* ===== COMMENT STYLES ===== */
        .comments-section {
            border-top: 1px solid #e9ecef;
            padding-top: 1rem;
        }

        .comment {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            border-left: 4px solid var(--primary-color);
        }

        .comment-header {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .comment-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            margin-right: 0.75rem;
            overflow: hidden;
            flex-shrink: 0;
        }

        .comment-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .comment-author {
            font-weight: 500;
            color: var(--dark-color);
            font-size: 0.875rem;
        }

        .comment-time {
            color: #6c757d;
            font-size: 0.75rem;
            margin-left: auto;
        }

        .comment-content {
            color: var(--dark-color);
            font-size: 0.875rem;
            line-height: 1.5;
        }

        /* ===== ENHANCED USER PROFILES ===== */
        .members-grid {
            display: grid;
            gap: 1rem;
        }

        .member-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.25rem;
            text-align: center;
            transition: var(--transition);
            border: 1px solid rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
        }

        .member-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        }

        .member-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .member-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin: 0 auto 1rem;
            border: 3px solid #e9ecef;
            overflow: hidden;
            position: relative;
        }

        .member-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .member-info {
            margin-bottom: 1rem;
        }

        .member-name {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .member-stats {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 0.75rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 0.9rem;
        }

        .stat-label {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .member-bio {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border-left: 3px solid var(--success-color);
        }

        .bio-text {
            font-size: 0.8rem;
            color: var(--dark-color);
            font-style: italic;
            line-height: 1.4;
            margin: 0;
        }

        .member-actions {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        /* ===== BUTTON STYLES ===== */
        .btn-modern {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: var(--transition);
            border: 2px solid transparent;
        }

        .btn-primary-modern {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
        }

        .btn-primary-modern:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
        }

        .btn-outline-modern {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
        }

        .btn-outline-modern:hover {
            background: var(--primary-color);
            color: white;
        }

        /* ===== FORM STYLES ===== */
        .form-control-modern {
            border-radius: 8px;
            border: 2px solid #e9ecef;
            padding: 0.75rem;
            transition: var(--transition);
        }

        .form-control-modern:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.15);
        }

        /* ===== SIDEBAR STYLES ===== */
        .sidebar-card {
            position: sticky;
            top: 2rem;
        }

        .guidelines-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .guidelines-list li {
            padding: 0.5rem 0;
            display: flex;
            align-items: flex-start;
            border-bottom: 1px solid #f1f3f4;
        }

        .guidelines-list li:last-child {
            border-bottom: none;
        }

        .guidelines-list li::before {
            content: "âœ“";
            color: var(--success-color);
            font-weight: bold;
            margin-right: 0.75rem;
            flex-shrink: 0;
        }

        /* ===== UTILITY CLASSES ===== */
        .text-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .badge-modern {
            border-radius: 20px;
            padding: 0.4rem 0.8rem;
            font-weight: 500;
            font-size: 0.75rem;
        }

        /* ===== RESPONSIVE DESIGN ===== */
        @media (max-width: 768px) {
            .members-grid {
                grid-template-columns: 1fr;
            }

            .post-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .post-avatar {
                margin-bottom: 0.75rem;
            }

            .member-stats {
                flex-direction: column;
                gap: 0.5rem;
            }
        }

        @media (min-width: 769px) and (max-width: 1024px) {
            .members-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (min-width: 1025px) {
            .members-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* ===== DARK MODE SUPPORT ===== */
        [data-theme="dark"] body.community-page {
            background: linear-gradient(135deg, #1a1d23 0%, #212529 100%) !important;
        }

        [data-theme="dark"] .card-modern,
        [data-theme="dark"] .post-card,
        [data-theme="dark"] .member-card {
            background: rgba(33, 37, 41, 0.95);
            border-color: rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .post-content,
        [data-theme="dark"] .comment-content,
        [data-theme="dark"] .member-name,
        [data-theme="dark"] .post-title,
        [data-theme="dark"] .post-author,
        [data-theme="dark"] .comment-author {
            background-color: rgba(67, 97, 238, 0.2);
            color: #8fa3ff !important;
            text-align: left !important;
        }

        [data-theme="dark"] .post-time,
        [data-theme="dark"] .comment-time,
        [data-theme="dark"] .stat-label,
        [data-theme="dark"] .text-muted {
            color: #adb5bd !important;
        }

        [data-theme="dark"] .comment,
        [data-theme="dark"] .member-bio {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .bio-text {
            color: #e9ecef !important;
        }

        [data-theme="dark"] .form-control-modern {
            background: #2d3035;
            border-color: #495057;
            color: #e9ecef;
        }

        [data-theme="dark"] .form-control-modern:focus {
            background: #2d3035;
            border-color: var(--primary-color);
            color: #e9ecef;
        }

        [data-theme="dark"] .form-label {
            color: #e9ecef !important;
        }

        [data-theme="dark"] .comments-section {
            border-top-color: rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .post-avatar,
        [data-theme="dark"] .member-avatar,
        [data-theme="dark"] .comment-avatar {
            border-color: rgba(255, 255, 255, 0.2);
        }

        [data-theme="dark"] .post-avatar .bg-light,
        [data-theme="dark"] .member-avatar .bg-light,
        [data-theme="dark"] .comment-avatar .bg-light {
            background: rgba(255, 255, 255, 0.1) !important;
        }

        [data-theme="dark"] .guidelines-list li {
            border-bottom-color: rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .btn-outline-modern {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        [data-theme="dark"] .btn-outline-modern:hover {
            background: var(--primary-color);
            color: white;
        }

        /* Dark mode for empty states */
        [data-theme="dark"] .empty-state .text-muted,
        [data-theme="dark"] .text-center .text-muted {
            color: #adb5bd !important;
        }

        /* Dark mode for badges */
        [data-theme="dark"] .badge-modern.bg-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14) !important;
            color: #212529 !important;
        }

        /* Ensure text colors are properly set in dark mode */
        [data-theme="dark"] .text-dark {
            color: #e9ecef !important;
        }

        [data-theme="dark"] .text-body {
            color: #e9ecef !important;
        }

        [data-theme="dark"] .lead.text-muted {
            color: #adb5bd !important;
        }

        /* Improve contrast for all interactive elements */
        .btn-primary-modern {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            font-weight: 600;
        }

        /* Ensure proper focus states for better accessibility */
        .form-control-modern:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }

        /* Improve contrast for post time */
        .post-time {
            color: #6c757d;
            font-size: 0.8rem;
            font-weight: 500;
            /* Slightly bolder for better readability */
        }

        /* Dark mode time contrast */
        [data-theme="dark"] .post-time {
            color: #ced4da !important;
            /* Lighter gray for dark mode */
        }

        /* Ensure proper contrast for placeholders */
        .form-control-modern::placeholder {
            color: #6c757d;
            opacity: 0.8;
        }

        [data-theme="dark"] .form-control-modern::placeholder {
            color: #adb5bd;
        }

        /* Ensure button text has sufficient contrast */
        .btn-modern {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            /* Increased from 500 */
            transition: var(--transition);
            border: 2px solid transparent;
        }

        .btn-outline-modern {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
            font-weight: 600;
        }

        .btn-outline-modern:hover {
            background: var(--primary-color);
            color: white;
        }

        .post-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.25rem;
            line-height: 1.3;
            text-align: left;
        }

        .post-content {
            color: var(--dark-color);
            line-height: 1.6;
            margin-bottom: 1rem;
            white-space: normal;
            word-wrap: break-word;
            text-align: left;
        }

        /* Dark mode adjustments */
        [data-theme="dark"] .post-title {
            color: #e9ecef !important;
            text-align: left !important;
        }

        [data-theme="dark"] .post-content {
            color: #e9ecef !important;
            text-align: left !important;
        }
    </style>
</head>

<body class="community-page">
    <%- include('partials/header', {title: 'Community' }) %>
        <!-- Main Content -->
        <div class="container community-container py-4">
            <!-- Page Header -->
            <div class="row mb-5">
                <div class="col-12">
                    <div class="text-center">
                        <h1 class="display-5 fw-bold text-gradient mb-3">Pet Care Community</h1>
                        <p class="lead text-muted">Connect with fellow pet lovers, share stories, and get expert advice
                        </p>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <!-- Left Column - Posts -->
                <div class="col-lg-8">
                    <!-- Create Post Card -->
                    <div class="card-modern mb-4">
                        <div class="card-header-modern">
                            <h2 class="h4 mb-0"><i class="bi bi-pencil-square me-2"></i>Create New Post</h2>
                        </div>
                        <div class="card-body p-4">
                            <form action="/community" method="POST">
                                <div class="mb-3">
                                    <label for="title" class="form-label fw-semibold">Post Title</label>
                                    <input type="text" class="form-control form-control-modern" id="title" name="title"
                                        placeholder="What's on your mind about pet care?" required>
                                </div>
                                <div class="mb-4">
                                    <label for="content" class="form-label fw-semibold">Share Your Story</label>
                                    <textarea class="form-control form-control-modern" id="content" name="content"
                                        rows="4" placeholder="Share your experiences, ask questions, or offer advice..."
                                        required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary-modern btn-modern w-100">
                                    <i class="bi bi-send me-2"></i>Publish Post
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Community Posts -->
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h2 class="h4 mb-0"><i class="bi bi-chat-dots me-2"></i>Recent Community Posts</h2>
                        </div>
                        <div class="card-body p-4">
                            <% if (posts && posts.length) { %>
                                <% posts.forEach(post=> { %>
                                    <div class="post-card">
                                        <!-- Post Header -->
                                        <div class="post-header">
                                            <div class="post-avatar">
                                                <% if (post.profile_picture_url) { %>
                                                    <img src="<%= post.profile_picture_url %>"
                                                        alt="<%= post.username %>"
                                                        onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                                                    <% } else { %>
                                                        <div
                                                            class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                                            <i class="bi bi-person text-muted"></i>
                                                        </div>
                                                        <% } %>
                                            </div>
                                            <div class="post-meta">
                                                <h3 class="post-title">
                                                    <%= post.title %>
                                                </h3>
                                                <div class="d-flex flex-wrap gap-2 align-items-center">
                                                    <span class="post-author">
                                                        <i class="bi bi-person me-1"></i>
                                                        <%= post.username %>
                                                    </span>
                                                    <span class="post-time">
                                                        <i class="bi bi-clock me-1"></i>
                                                        <%= new Date(post.created_at).toLocaleString() %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Post Content -->
                                        <div class="post-content">
                                            <%= post.content %>
                                        </div>
                                        <!-- Comments Section -->
                                        <div class="comments-section">
                                            <% if (post.comments && post.comments.length) { %>
                                                <div class="comment-toggle mb-3" data-post-id="<%= post.post_id %>">
                                                    <button class="btn btn-outline-modern btn-sm toggle-comments-btn">
                                                        <i class="bi bi-chat-dots me-1"></i>
                                                        <span class="comment-count">
                                                            <%= post.comments.length %>
                                                        </span>
                                                        <%= post.comments.length===1 ? 'comment' : 'comments' %>
                                                            <i class="bi bi-chevron-down ms-1 toggle-icon"></i>
                                                    </button>
                                                </div>

                                                <div class="comments-container" id="comments-<%= post.post_id %>"
                                                    style="display: none;">
                                                    <% post.comments.forEach(comment=> { %>
                                                        <div class="comment">
                                                            <div class="comment-header">
                                                                <div class="comment-avatar">
                                                                    <% if (comment.profile_picture_url) { %>
                                                                        <img src="<%= comment.profile_picture_url %>"
                                                                            alt="<%= comment.username %>"
                                                                            onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                                                                        <% } else { %>
                                                                            <div
                                                                                class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                                                                <i class="bi bi-person text-muted"
                                                                                    style="font-size: 0.8rem;"></i>
                                                                            </div>
                                                                            <% } %>
                                                                </div>
                                                                <span class="comment-author">
                                                                    <%= comment.username %>
                                                                </span>
                                                                <span class="comment-time">
                                                                    <%= new Date(comment.created_at).toLocaleString() %>
                                                                </span>
                                                            </div>
                                                            <div class="comment-content">
                                                                <%= comment.content %>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                                <% } %>

                                                    <!-- Comment Form -->
                                                    <form class="comment-form mt-3" data-post-id="<%= post.post_id %>">
                                                        <div class="input-group">
                                                            <label for="comment-<%= post.post_id %>"
                                                                class="visually-hidden">
                                                                Write a comment for <%= post.username %>'s post
                                                            </label>
                                                            <input type="text" class="form-control form-control-modern"
                                                                id="comment-<%= post.post_id %>" name="content"
                                                                placeholder="Write a comment..."
                                                                aria-label="Write a comment for <%= post.username %>'s post"
                                                                required>
                                                            <button class="btn btn-primary-modern" type="submit">
                                                                <i class="bi bi-send me-1"></i>Post
                                                            </button>
                                                        </div>
                                                    </form>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="text-center py-5">
                                                <i class="bi bi-chat-dots display-1 text-muted mb-3"></i>
                                                <h4 class="text-muted">No Posts Yet</h4>
                                                <p class="text-muted mb-4">Be the first to start a conversation in the
                                                    community!</p>
                                                <a href="#title" class="btn btn-primary-modern btn-modern">
                                                    <i class="bi bi-pencil-square me-2"></i>Create First Post
                                                </a>
                                            </div>
                                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Right Column - Sidebar -->
                <div class="col-lg-4">
                    <div class="sidebar-card">
                        <!-- Community Guidelines -->
                        <div class="card-modern mb-4">
                            <div class="card-header-modern">
                                <h3 class="h5 mb-0"><i class="bi bi-shield-check me-2"></i>Community Guidelines</h3>
                            </div>
                            <div class="card-body p-3">
                                <ul class="guidelines-list">
                                    <li>Be kind and respectful to all members</li>
                                    <li>Share helpful pet care tips and experiences</li>
                                    <li>Ask questions and offer supportive advice</li>
                                    <li>No spam, advertising, or self-promotion</li>
                                    <li>Keep content appropriate and pet-focused</li>
                                    <li>Respect different opinions and experiences</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="card-modern mb-4">
                            <div class="card-header-modern">
                                <h3 class="h5 mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h3>
                            </div>
                            <div class="card-body p-3">
                                <div class="d-grid gap-2">
                                    <a href="/dashboard" class="btn btn-outline-modern btn-modern">
                                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                    </a>
                                    <a href="/pets/add" class="btn btn-outline-modern btn-modern">
                                        <i class="bi bi-plus-circle me-2"></i>Add Pet
                                    </a>
                                    <a href="/schedule-task" class="btn btn-outline-modern btn-modern">
                                        <i class="bi bi-calendar-plus me-2"></i>Schedule Task
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Community Members -->
                        <div class="card-modern">
                            <div class="card-header-modern">
                                <h3 class="h5 mb-0"><i class="bi bi-people me-2"></i>Community Members</h3>
                            </div>
                            <div class="card-body p-3">
                                <div class="members-grid">
                                    <% if (communityUsers && communityUsers.length) { %>
                                        <% communityUsers.forEach(user=> { %>
                                            <% if (user.role==='regular' ) { %>
                                                <div class="member-card">
                                                    <!-- Avatar -->
                                                    <div class="member-avatar">
                                                        <% if (user.profile_picture_url) { %>
                                                            <img src="<%= user.profile_picture_url %>"
                                                                alt="<%= user.username %>"
                                                                onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                                                            <% } else { %>
                                                                <div
                                                                    class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                                                    <i class="bi bi-person text-muted"></i>
                                                                </div>
                                                                <% } %>
                                                    </div>

                                                    <!-- User Info -->
                                                    <div class="member-info">
                                                        <h4 class="member-name">
                                                            <%= user.username %>
                                                        </h4>

                                                        <!-- Stats -->
                                                        <div class="member-stats">
                                                            <div class="stat-item">
                                                                <div class="stat-value">
                                                                    <i class="bi bi-calendar-heart"></i>
                                                                </div>
                                                                <div class="stat-label">
                                                                    <%= calculatePetCareDuration(user.created_at) %>
                                                                </div>
                                                            </div>
                                                            <div class="stat-item">
                                                                <div class="stat-value">
                                                                    <%= user.pet_count || 0 %>
                                                                </div>
                                                                <div class="stat-label">
                                                                    <%= user.pet_count===1 ? 'Pet' : 'Pets' %>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Bio -->
                                                        <% if (user.bio && !user.bio_requires_moderation) { %>
                                                            <div class="member-bio">
                                                                <p class="bio-text">
                                                                    "<%= user.bio.length> 80 ? user.bio.substring(0, 80)
                                                                        + '...' : user.bio %>"
                                                                </p>
                                                            </div>
                                                            <% } else if (user.bio_requires_moderation) { %>
                                                                <div class="text-center">
                                                                    <span class="badge-modern bg-warning text-dark">
                                                                        <i class="bi bi-clock me-1"></i>Bio Pending
                                                                    </span>
                                                                </div>
                                                                <% } %>
                                                    </div>

                                                    <!-- Actions -->
                                                    <div class="member-actions">
                                                        <button class="btn btn-outline-modern btn-sm view-profile-btn"
                                                            data-user-id="<%= user.user_id %>">
                                                            <i class="bi bi-eye me-1"></i>Profile
                                                        </button>
                                                    </div>
                                                </div>
                                                <% } %>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <div class="text-center py-4">
                                                                <i class="bi bi-people display-6 text-muted mb-3"></i>
                                                                <p class="text-muted mb-0">No community members found
                                                                </p>
                                                            </div>
                                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
        <!-- <script src="/js/theme.js"></script> -->

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Initialize dropdowns
                const dropdowns = document.querySelectorAll('.dropdown');
                dropdowns.forEach(dropdown => {
                    const toggle = dropdown.querySelector('.dropdown-toggle');
                    if (toggle) {
                        new bootstrap.Dropdown(toggle);
                    }
                });

                // Comment toggle functionality
                document.querySelectorAll('.toggle-comments-btn').forEach(button => {
                    button.addEventListener('click', function () {
                        const postId = this.closest('.comment-toggle').getAttribute('data-post-id');
                        const commentsContainer = document.getElementById('comments-' + postId);
                        const toggleIcon = this.querySelector('.toggle-icon');

                        if (commentsContainer.style.display === 'none') {
                            commentsContainer.style.display = 'block';
                            this.classList.add('expanded');
                            toggleIcon.style.transform = 'rotate(180deg)';
                        } else {
                            commentsContainer.style.display = 'none';
                            this.classList.remove('expanded');
                            toggleIcon.style.transform = 'rotate(0deg)';
                        }
                    });
                });

                // AJAX comment submission
                document.querySelectorAll('.comment-form').forEach(form => {
                    form.addEventListener('submit', async function (e) {
                        e.preventDefault();

                        const postId = this.getAttribute('data-post-id');
                        const contentInput = this.querySelector('input[name="content"]');
                        const content = contentInput.value.trim();

                        if (!content) {
                            showAlert('Please enter a comment', 'warning');
                            return;
                        }

                        const submitButton = this.querySelector('button[type="submit"]');
                        const originalText = submitButton.innerHTML;
                        submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span>';
                        submitButton.disabled = true;

                        try {
                            const response = await fetch(`/community/comments/${postId}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ content })
                            });

                            const result = await response.json();

                            if (result.success) {
                                contentInput.value = '';
                                addCommentToUI(result.comment, postId);
                                updateCommentCount(postId, true);
                                showAlert('Comment posted successfully!', 'success');
                            } else {
                                showAlert('Error: ' + result.error, 'danger');
                            }
                        } catch (error) {
                            // console.error('Network error:', error);
                            showAlert('Network error posting comment. Please try again.', 'danger');
                        } finally {
                            submitButton.innerHTML = originalText;
                            submitButton.disabled = false;
                        }
                    });
                });

                // View profile functionality
                document.querySelectorAll('.view-profile-btn').forEach(button => {
                    button.addEventListener('click', function () {
                        const userId = this.getAttribute('data-user-id');
                        window.open(`/community/profile/${userId}`, '_blank');
                    });
                });

                function addCommentToUI(comment, postId) {
                    const commentHTML = `
        <div class="comment">
            <div class="comment-header">
                <div class="comment-avatar">
                    ${comment.profile_picture_url ?
                            `<img src="${comment.profile_picture_url}" alt="${comment.username}" loading="lazy">` :
                            `<div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                            <i class="bi bi-person text-muted" style="font-size: 0.8rem;"></i>
                        </div>`
                        }
                </div>
                <span class="comment-author">${comment.username}</span>
                <span class="comment-time">
                    ${new Date(comment.created_at).toLocaleString()}
                </span>
            </div>
            <div class="comment-content">
                ${comment.content}
            </div>
        </div>
    `;
                    const commentsContainer = document.getElementById(`comments-${postId}`);
                    const commentToggle = document.querySelector(`.comment-toggle[data-post-id="${postId}"]`);

                    if (commentsContainer) {
                        commentsContainer.insertAdjacentHTML('beforeend', commentHTML);
                        if (commentsContainer.style.display === 'none') {
                            commentsContainer.style.display = 'block';
                            const toggleBtn = commentToggle.querySelector('.toggle-comments-btn');
                            if (toggleBtn) {
                                toggleBtn.classList.add('expanded');
                                toggleBtn.querySelector('.toggle-icon').style.transform = 'rotate(180deg)';
                            }
                        }
                    }

                    // Update the label for the comment input
                    const commentInput = document.querySelector(`#comment-${postId}`);
                    if (commentInput) {
                        commentInput.setAttribute('aria-label', `Write a comment for ${comment.username}'s post`);
                    }
                }

                function updateCommentCount(postId, increment = true) {
                    const commentToggle = document.querySelector(`.comment-toggle[data-post-id="${postId}"]`);
                    if (commentToggle) {
                        const countElement = commentToggle.querySelector('.comment-count');
                        if (countElement) {
                            let currentCount = parseInt(countElement.textContent) || 0;
                            currentCount = increment ? currentCount + 1 : currentCount - 1;
                            countElement.textContent = currentCount;

                            const commentText = currentCount === 1 ? 'comment' : 'comments';
                            const textElement = commentToggle.querySelector('.toggle-comments-btn');
                            textElement.innerHTML = textElement.innerHTML.replace(/\d+ comments?/, `${currentCount} ${commentText}`);
                        }
                    }
                }

                function showAlert(message, type) {
                    const existingAlerts = document.querySelectorAll('.alert');
                    existingAlerts.forEach(alert => alert.remove());

                    const alertDiv = document.createElement('div');
                    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                    alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1060; min-width: 300px;';
                    alertDiv.innerHTML = `
                    <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;

                    document.body.appendChild(alertDiv);

                    setTimeout(() => {
                        if (alertDiv.parentNode) {
                            alertDiv.remove();
                        }
                    }, 5000);
                }
            });
        </script>
        <%- include('partials/footer') %>
</body>
</html>