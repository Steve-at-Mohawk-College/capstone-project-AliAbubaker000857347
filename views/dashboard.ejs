                                    <button class="btn btn-sm btn-outline-danger remove-btn" 
                                            data-type="task" data-id="<%= task.task_id %>" 
                                            data-name="<%= task.title %>">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
