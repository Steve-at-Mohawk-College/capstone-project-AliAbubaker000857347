    background-color: #f8f9fa;
    padding: 12px;
    border-radius: 6px;
    border-left: 3px solid #0d6efd;
}

.edit-task-form .form-label {
    font-weight: 500;
}

.edit-task-form .form-control-sm,
.edit-task-form .form-select-sm {
    font-size: 0.875rem;
}
</style>

