<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        /* ===== LIGHT THEME VARIABLES ===== */
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #06d6a0;
            --accent: #ff6b6b;
            --light: #f8f9fa;
            --dark: #1a1d21;
            --gray: #6c757d;
            --light-gray: #e9ecef;
            --border-radius: 16px;
            --border-radius-sm: 10px;
            --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 15px 50px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --glass-bg: rgba(255, 255, 255, 0.9);
            --glass-border: rgba(255, 255, 255, 0.2);
        }

        /* ===== DARK THEME VARIABLES ===== */
        [data-theme="dark"] {
            --light: #121212;
            --dark: #f8f9fa;
            --gray: #b0b0b0;
            --light-gray: #2d2d2d;
            --primary-light: rgba(67, 97, 238, 0.15);
            --glass-bg: rgba(30, 30, 30, 0.95);
            --glass-border: rgba(255, 255, 255, 0.1);
            --shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            --shadow-lg: 0 15px 50px rgba(0, 0, 0, 0.4);
        }

        /* ===== BASE STYLES ===== */
        body {
            background-color: var(--light);
            color: var(--dark);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: var(--transition);
            min-height: 100vh;
        }

        /* ===== HEALTH INDICATORS ===== */
        .health-indicator {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            border: 2px solid white;
            vertical-align: middle;
        }

        [data-theme="dark"] .health-indicator {
            border-color: var(--dark);
        }

        .health-healthy {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .health-needs_vaccination {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .health-underweight {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
        }

        .health-overweight {
            background: linear-gradient(135deg, #fd7e14, #e74c3c);
        }

        .health-recent_vet_visit {
            background: linear-gradient(135deg, #6f42c1, #9c42c1);
        }

        /* ===== MODERN PHOTO CARDS ===== */
        .photo-card {
            transition: var(--transition);
            margin-bottom: 2rem;
            border: none;
            border-radius: var(--border-radius);
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            box-shadow: var(--shadow);
            overflow: hidden;
            border: 1px solid var(--glass-border);
        }

        .photo-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: var(--shadow-lg);
            border-color: rgba(67, 97, 238, 0.3);
        }

        .photo-card:hover .photo-image {
            transform: scale(1.08);
        }

        /* Image Overlay */
        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.8));
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: flex-end;
            padding: 1.5rem;
        }

        .photo-card:hover .image-overlay {
            opacity: 1;
        }

        .view-details {
            color: white;
            font-size: 0.9rem;
            font-weight: 600;
            background: rgba(67, 97, 238, 0.8);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            backdrop-filter: blur(10px);
        }

        /* Card Body */
        .card-body {
            padding: 1.5rem;
            background: transparent;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
            line-height: 1.4;
            transition: var(--transition);
            cursor: pointer;
        }

        .card-title:hover {
            color: var(--primary);
        }

        .card-text.username {
            font-size: 0.85rem;
            color: var(--gray);
            margin-bottom: 1rem;
        }

        .card-text.username i {
            color: var(--primary);
        }

        /* Health Info */
        .health-info {
            background: var(--primary-light);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid var(--primary);
        }

        .health-info div {
            font-size: 0.85rem;
            color: var(--dark);
            margin-bottom: 0.4rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
        }

        .health-info i {
            color: var(--primary);
            width: 18px;
            font-size: 1rem;
        }

        /* Tags */
        .tags-container {
            margin-bottom: 1rem;
        }

        .tag-badge {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            font-size: 0.75rem;
            padding: 0.4rem 0.8rem;
            margin: 0.15rem;
            border-radius: 20px;
            font-weight: 500;
            transition: var(--transition);
        }

        .tag-badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
        }

        /* Actions */
        .card-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid var(--light-gray);
        }

        .favorite-btn {
            background: rgba(220, 53, 69, 0.1);
            border: 2px solid rgba(220, 53, 69, 0.3);
            color: #dc3545;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: var(--transition);
            cursor: pointer;
        }

        .favorite-btn:hover,
        .favorite-btn.active {
            background: #dc3545;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        }

        .date-text {
            font-size: 0.8rem;
            color: var(--gray);
            font-weight: 500;
        }

        .date-text i {
            color: var(--primary);
        }

        /* ===== PAGE HEADER ===== */
        .page-header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: var(--border-radius);
            padding: 2.5rem;
            margin-bottom: 2.5rem;
            color: white;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 L100,0 L100,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
            background-size: cover;
        }

        .breadcrumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 0.6rem 1.2rem;
            backdrop-filter: blur(10px);
        }

        .breadcrumb-item a {
            color: white !important;
            text-decoration: none;
            font-weight: 500;
        }

        .breadcrumb-item.active {
            color: rgba(255, 255, 255, 0.9) !important;
        }

        /* Header Typography */
        h1 {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .page-header p {
            font-size: 1.1rem;
            opacity: 0.95;
            margin-bottom: 0;
        }

        /* ===== HEALTH ALERT ===== */
        .health-alert {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: var(--border-radius);
            border-left: 5px solid var(--primary);
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
        }

        .health-alert h6 {
            color: var(--dark);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }

        .health-alert h6 i {
            color: var(--primary);
            margin-right: 0.5rem;
        }

        .health-alert p {
            color: var(--gray);
            margin-bottom: 0;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        /* ===== DROPDOWN STYLES ===== */
        .dropdown .btn-light {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            color: var(--dark);
            font-weight: 500;
            border-radius: var(--border-radius-sm);
            padding: 0.6rem 1.2rem;
        }

        .dropdown .btn-light:hover {
            background: var(--primary-light);
            border-color: var(--primary);
        }

        .dropdown-menu {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            padding: 0.5rem;
        }

        .dropdown-item {
            color: var(--dark);
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            margin: 0.1rem 0;
            font-weight: 500;
            transition: var(--transition);
        }

        .dropdown-item:hover {
            background: var(--primary-light);
            color: var(--primary);
        }

        .dropdown-item.active {
            background: var(--primary-light);
            color: var(--primary);
            font-weight: 600;
        }

        /* ===== BUTTON STYLES ===== */
        .btn-outline-light {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            border-radius: var(--border-radius-sm);
            font-weight: 500;
            transition: var(--transition);
        }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: white;
            transform: translateY(-2px);
        }

        .btn-light {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid transparent;
            color: var(--primary);
            border-radius: var(--border-radius-sm);
            font-weight: 600;
            transition: var(--transition);
        }

        .btn-light:hover {
            background: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            padding: 5rem 2rem;
            text-align: center;
            background: var(--glass-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            border: 1px solid var(--glass-border);
            backdrop-filter: blur(20px);
        }

        .empty-state .display-1 {
            color: var(--light-gray);
            margin-bottom: 1.5rem;
            font-size: 4rem;
        }

        .empty-state h4 {
            color: var(--dark);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: var(--gray);
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .empty-state .btn-primary {
            padding: 0.8rem 2rem;
            border-radius: var(--border-radius-sm);
            font-weight: 600;
            font-size: 1rem;
        }

        /* ===== LOAD MORE BUTTON ===== */
        .btn-outline-primary {
            background: transparent;
            border: 2px solid var(--primary);
            color: var(--primary);
            border-radius: var(--border-radius-sm);
            padding: 0.8rem 2.5rem;
            font-weight: 600;
            transition: var(--transition);
        }

        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(67, 97, 238, 0.3);
        }

        /* ===== CONTAINER SPACING ===== */
        .container.mt-4 {
            margin-top: 2rem !important;
            padding-bottom: 3rem;
        }

        /* ===== RESPONSIVE DESIGN ===== */
        @media (max-width: 768px) {
            .image-container {
                height: 200px;
            }

            .page-header {
                padding: 1.75rem;
                margin-bottom: 1.75rem;
            }

            h1 {
                font-size: 1.8rem;
            }

            .col-md-4.text-end {
                text-align: left !important;
                margin-top: 1.5rem;
            }

            .d-flex.flex-wrap {
                justify-content: flex-start !important;
            }

            .dropdown,
            .btn-outline-light,
            .btn-light {
                margin-bottom: 0.5rem;
                width: 100%;
                text-align: center;
            }
        }

        @media (max-width: 576px) {
            .image-container {
                height: 180px;
            }

            .container.mt-4 {
                margin-top: 5rem !important;
                padding-left: 1rem;
                padding-right: 1rem;
            }

            .page-header {
                padding: 1.5rem;
            }

            h1 {
                font-size: 1.5rem;
            }

            .breadcrumb {
                font-size: 0.9rem;
                padding: 0.5rem 1rem;
            }

            .card-body {
                padding: 1.25rem;
            }

            .health-info {
                padding: 0.75rem;
            }

            .empty-state {
                padding: 3rem 1.5rem;
            }

            .empty-state .display-1 {
                font-size: 3rem;
            }
        }

        /* ===== ANIMATIONS ===== */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .photo-card {
            animation: fadeIn 0.6s ease-out forwards;
        }

        .photo-card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .photo-card:nth-child(3) {
            animation-delay: 0.2s;
        }

        .photo-card:nth-child(4) {
            animation-delay: 0.3s;
        }

        .photo-card:nth-child(5) {
            animation-delay: 0.4s;
        }

        .photo-card:nth-child(6) {
            animation-delay: 0.5s;
        }

        /* ===== ACCESSIBILITY ===== */
        .photo-card:focus-within {
            outline: 3px solid var(--primary);
            outline-offset: 2px;
        }

        [data-theme="dark"] .photo-card:focus-within {
            outline-color: var(--secondary);
        }

        /* ===== FIX FOR DARK MODE BUTTONS ===== */
        [data-theme="dark"] .btn-light {
            background: rgb(255, 255, 255);
            color: var(--primary) !important;
            border: 2px solid transparent;
            font-weight: 600;
        }

        [data-theme="dark"] .btn-light:hover {
            background: rgb(0, 0, 0);
            color: var(--primary) !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        [data-theme="dark"] .btn-light i {
            color: black;
            background: rgb(255, 255, 255);
        }

        [data-theme="dark"] .dropdown .btn-light {
            background: rgb(255, 255, 255);
            color: black !important;
        }

        [data-theme="dark"] .dropdown .btn-light:hover {
            color: rgb(0, 0, 0) !important;
            background: rgb(255, 255, 255);
        }

        /* Print Styles */
        @media print {
            .photo-card {
                box-shadow: none !important;
                border: 1px solid #ddd !important;
                break-inside: avoid;
            }

            .btn,
            .dropdown,
            .favorite-btn {
                display: none !important;
            }

            .image-overlay {
                display: none !important;
            }
        }

        .page-header .d-flex.flex-wrap {
            position: relative;
            z-index: 10;
        }

        .btn-outline-light,
        .btn-light {
            position: relative;
            z-index: 5;
        }

        [data-theme="dark"] .btn-light {
            background: #000000 !important;
            color: white !important;
            border: 2px solid rgba(255, 255, 255, 0.3) !important;
            font-weight: 600;
        }

        [data-theme="dark"] .btn-light:hover {
            background: #1a1a1a !important;
            color: white !important;
            border-color: white !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .btn-light i {
            color: rgb(255, 255, 255) !important;
            background-color: #000000;
        }

        [data-theme="dark"] .btn-light:hover i {
            color: rgb(255, 0, 0) !important;
        }

        [data-theme="dark"] .dropdown .btn-light {
            background: #000000 !important;
            color: white !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

        [data-theme="dark"] .dropdown .btn-light:hover {
            background: #1a1a1a !important;
            color: white !important;
            border-color: rgba(255, 255, 255, 0.4) !important;
        }

        [data-theme="dark"] .dropdown .btn-light {
            color: white !important;
        }

        [data-theme="dark"] .dropdown .btn-light:hover {
            color: white !important;
        }

        [data-theme="dark"] .btn-outline-light {
            background: transparent !important;
            border: 2px solid rgba(255, 255, 255, 0.5) !important;
            color: white !important;
        }

        [data-theme="dark"] .btn-outline-light:hover {
            background: rgb(255, 0, 0) !important;
            border-color: white !important;
            color: white !important;
        }

        [data-theme="dark"] .btn-outline-light i {
            color: white !important;
        }

        /* Ensure dropdown menu items are visible */
        [data-theme="dark"] .dropdown-menu {
            background: #000000 !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

        [data-theme="dark"] .dropdown-item {
            color: white !important;
        }

        [data-theme="dark"] .dropdown-item:hover {
            background: rgba(255, 255, 255, 0.1) !important;
            color: white !important;
        }

        [data-theme="dark"] .dropdown-item.active {
            background: rgba(0, 0, 0, 0.3) !important;
            color: white !important;
        }

        [data-theme="dark"] .health-info div {
            color: white !important;
            font-weight: 600;
        }

        [data-theme="dark"] .health-info i {
            color: #06d6a0 !important;
            font-size: 1.1rem;
        }

        [data-theme="dark"] .health-info {
            background: rgba(0, 0, 0, 0.5) !important;
            border-left: 4px solid #06d6a0 !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .health-info div span {
            color: white !important;
            font-weight: 500;
        }

        [data-theme="dark"] .card-text.username {
            color: #b0b0b0 !important;
        }

        [data-theme="dark"] .date-text {
            color: #b0b0b0 !important;
        }

        /* Ensure the health info stands out */
        [data-theme="dark"] .health-info div i.bi-speedometer2 {
            color: #06d6a0 !important;
        }

        [data-theme="dark"] .health-info div i.bi-shield-check {
            color: #4361ee !important;
        }

        [data-theme="dark"] .health-info div i.bi-hospital {
            color: #ff6b6b !important;
        }

        /* Update the image container to maintain aspect ratio */
        .image-container {
            position: relative;
            width: 100%;
            height: 240px;
            /* Or your desired height */
            overflow: hidden;
        }

        .photo-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            transition: transform 0.5s ease;
        }

        .photo-image-wrapper {
            text-align: center;
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 400px;
        }

        .photo-detail-image {
            max-height: 600px;
            max-width: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* Dark theme support */
        [data-bs-theme="dark"] .photo-image-wrapper {
            background: #1a1d21;
        }

        @media (max-width: 770px) {

            .theme-toggle-modern,
            .header-icons-mobile .theme-toggle-modern,
            .header-icons-desktop .theme-toggle-modern {
                width: 44px !important;
                height: 44px !important;
                min-width: 44px !important;
                min-height: 44px !important;
            }

            /* Ensure the icon inside is proper size */
            .theme-toggle-modern i,
            #themeToggleMobile i,
            #themeToggleDesktop i {
                font-size: 1.2rem !important;
                width: auto !important;
                height: auto !important;
            }

            .header-icons-mobile,
            .header-icons-desktop {
                gap: 0.5rem !important;
            }

            /* Prevent any width:100% styles from affecting theme button */
            .header-icons-mobile .theme-toggle-modern,
            .header-icons-desktop .theme-toggle-modern {
                width: 44px !important;
                flex-shrink: 0 !important;
            }
        }

        /* More specific fix for very small screens */
        @media (max-width: 400px) {
            .theme-toggle-modern {
                width: 40px !important;
                height: 40px !important;
            }

            .theme-toggle-modern i {
                font-size: 1.1rem !important;
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

        <div class="container mt-4">
            <!-- Modern Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/gallery">Gallery</a></li>
                                <li class="breadcrumb-item"><a href="/gallery/health-overview">Health Overview</a></li>
                                <li class="breadcrumb-item active">
                                    <span class="health-indicator health-<%= currentHealthStatus %>"></span>
                                    <%= statusLabels[currentHealthStatus] %>
                                </li>
                            </ol>
                        </nav>
                        <h1 class="display-5 fw-bold mb-2">
                            <span class="health-indicator health-<%= currentHealthStatus %>"></span>
                            <%= statusLabels[currentHealthStatus] %>
                        </h1>
                        <p class="mb-0 opacity-75">Photos of pets with specific health status</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="d-flex flex-wrap justify-content-end gap-2">
                            <!-- Sorting Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bi bi-sort-down"></i>
                                    <% if (currentSort==='newest' ) { %>Newest<% } %>
                                            <% if (currentSort==='oldest' ) { %>Oldest<% } %>
                                                    <% if (currentSort==='popular' ) { %>Most Popular<% } %>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item <%= currentSort === 'newest' ? 'active' : '' %>"
                                            href="/gallery/health-status/<%= currentHealthStatus %>?sort=newest">
                                            <i class="bi bi-sort-down"></i> Newest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item <%= currentSort === 'oldest' ? 'active' : '' %>"
                                            href="/gallery/health-status/<%= currentHealthStatus %>?sort=oldest">
                                            <i class="bi bi-sort-up"></i> Oldest First
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item <%= currentSort === 'popular' ? 'active' : '' %>"
                                            href="/gallery/health-status/<%= currentHealthStatus %>?sort=popular">
                                            <i class="bi bi-heart"></i> Most Popular
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <a href="/gallery" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left"></i> Gallery
                            </a>
                            <a href="/gallery/health-overview" class="btn btn-light">
                                <i class="bi bi-heart-pulse"></i> Overview
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Health Status Description -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="health-alert alert border-0">
                        <h6><i class="bi bi-info-circle text-primary"></i> About this health status:</h6>
                        <% if (currentHealthStatus==='healthy' ) { %>
                            <p class="mb-0">Pets with normal weight range (1-200kg) and up-to-date vaccinations.</p>
                            <% } else if (currentHealthStatus==='needs_vaccination' ) { %>
                                <p class="mb-0">Pets with overdue vaccinations or upcoming vaccination dates.</p>
                                <% } else if (currentHealthStatus==='underweight' ) { %>
                                    <p class="mb-0">Pets weighing less than 1kg that may need nutritional attention.</p>
                                    <% } else if (currentHealthStatus==='overweight' ) { %>
                                        <p class="mb-0">Pets weighing more than 200kg that may need diet adjustment.</p>
                                        <% } else if (currentHealthStatus==='recent_vet_visit' ) { %>
                                            <p class="mb-0">Pets that have visited the vet within the last 30 days.</p>
                                            <% } %>
                    </div>
                </div>
            </div>

            <!-- Photos Grid -->
            <div class="row">
                <% if (photos.length> 0) { %>
                    <% photos.forEach(photo=> { %>
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="card photo-card" data-photo-id="<%= photo.photo_id %>" tabindex="0">
                                <div class="image-container" data-photo-id="<%= photo.photo_id %>">
                                    <img src="<%= photo.photo_url %>" class="photo-image" alt="<%= photo.title %>"
                                        data-photo-id="<%= photo.photo_id %>"
                                        onerror="this.src='https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?w=400&h=300&fit=crop'">
                                    <!-- <div class="image-overlay">
                                    <span class="view-details">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </span>
                                </div> -->
                                </div>

                                <div class="card-body">
                                    <h6 class="card-title">
                                        <%= photo.title %>
                                    </h6>
                                    <p class="card-text username">
                                        <i class="bi bi-person-circle me-1"></i>By <%= photo.username %>
                                    </p>

                                    <!-- Health Info -->
                                    <div class="health-info">
                                        <% if (photo.weight) { %>
                                            <div><i class="bi bi-speedometer2"></i> Weight: <%= photo.weight %> kg</div>
                                            <% } %>
                                                <% if (photo.vaccination_date) { %>
                                                    <div><i class="bi bi-shield-check"></i> Last vaccinated: <%= new
                                                            Date(photo.vaccination_date).toLocaleDateString() %>
                                                    </div>
                                                    <% } %>
                                                        <% if (photo.vet_visit_date) { %>
                                                            <div><i class="bi bi-hospital"></i> Vet visit: <%= new
                                                                    Date(photo.vet_visit_date).toLocaleDateString() %>
                                                            </div>
                                                            <% } %>
                                    </div>

                                    <!-- Tags -->
                                    <% if (photo.tags) { %>
                                        <div class="tags-container">
                                            <% photo.tags.split(',').forEach(tag=> { %>
                                                <span class="badge tag-badge">
                                                    #<%= tag %>
                                                </span>
                                                <% }); %>
                                        </div>
                                        <% } %>

                                            <!-- Actions -->
                                            <div class="card-actions">
                                                <button
                                                    class="btn favorite-btn <%= photo.is_favorited ? 'active' : '' %>"
                                                    onclick="toggleFavorite(<%= photo.photo_id %>, this, event)"
                                                    data-photo-id="<%= photo.photo_id %>"
                                                    aria-label="<%= photo.is_favorited ? 'Remove from favorites' : 'Add to favorites' %>">
                                                    <i class="bi bi-heart<%= photo.is_favorited ? '-fill' : '' %>"></i>
                                                    <span class="favorite-count">
                                                        <%= photo.favorite_count || 0 %>
                                                    </span>
                                                </button>
                                                <small class="date-text">
                                                    <i class="bi bi-calendar me-1"></i>
                                                    <%= new Date(photo.created_at).toLocaleDateString() %>
                                                </small>
                                            </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>

                            <% } else { %>
                                <div class="col-12">
                                    <div class="empty-state">
                                        <i class="bi bi-camera display-1"></i>
                                        <h4 class="mt-3">No photos found</h4>
                                        <p class="mb-4">
                                            No photos match the current health status filter.
                                        </p>
                                        <a href="/gallery" class="btn btn-primary">
                                            <i class="bi bi-arrow-left me-2"></i>Browse All Photos
                                        </a>
                                    </div>
                                </div>
                                <% } %>
            </div>

            <!-- Load More -->
            <% if (hasMore) { %>
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <a href="/gallery/health-status/<%= currentHealthStatus %>?page=<%= currentPage + 1 %><%= currentSort ? '&sort=' + currentSort : '' %>"
                            class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-arrow-clockwise me-2"></i>Load More Photos
                        </a>
                    </div>
                </div>
                <% } %>
        </div>
        <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const savedTheme = localStorage.getItem('theme') || 'light';
                document.documentElement.setAttribute('data-theme', savedTheme);
            });
            document.addEventListener('DOMContentLoaded', function () {
                // Handle image loading and errors
                const images = document.querySelectorAll('.photo-image');

                images.forEach(img => {
                    img.classList.add('loading');

                    // Handle successful load
                    img.onload = function () {
                        this.classList.remove('loading');
                        this.classList.add('loaded');
                    };

                    // Handle errors
                    img.onerror = function () {
                        this.classList.remove('loading');
                        this.classList.add('error');
                        this.src = '/images/default-photo.jpg'; 
                    };
                });
                if ('IntersectionObserver' in window) {
                    const imageObserver = new IntersectionObserver((entries) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                const img = entry.target;
                                if (img.dataset.src) {
                                    img.src = img.dataset.src;
                                    imageObserver.unobserve(img);
                                }
                            }
                        });
                    });

                    images.forEach(img => {
                        if (img.dataset.src) {
                            imageObserver.observe(img);
                        }
                    });
                }
            });

            async function toggleFavorite(photoId, button, event) {
                if (event) {
                    event.stopPropagation();
                    event.preventDefault();
                }

                try {
                    const response = await fetch(`/gallery/photo/${photoId}/favorite`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        const icon = button.querySelector('i');
                        const countSpan = button.querySelector('.favorite-count');

                        if (result.action === 'added') {
                            icon.classList.remove('bi-heart');
                            icon.classList.add('bi-heart-fill');
                            button.classList.add('active');
                            button.setAttribute('aria-label', 'Remove from favorites');
                        } else {
                            icon.classList.remove('bi-heart-fill');
                            icon.classList.add('bi-heart');
                            button.classList.remove('active');
                            button.setAttribute('aria-label', 'Add to favorites');
                        }

                        countSpan.textContent = result.favorite_count;
                    }
                } catch (error) {
                    // console.error('Favorite error:', error);
                    alert('Error updating favorite');
                }
            }
        </script>
        <%- include('../partials/footer') %>
</body>
</html>