<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>

        body {
    margin: 0;
    padding: 0;
}

/* Add padding to account for fixed header */
.container {
    margin-top: 80px !important; /* Adjust this value based on your header height */
}
    

        

        .photo-card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
        }
        .photo-card:hover {
            transform: translateY(-5px);
        }
        .photo-image {
           height: 300px;
           width: 100;
           object-fit: cover;
           max-width: 90%;
           width: 90%;
        }
        .tag-badge {
            cursor: pointer;
            margin: 2px;
        }
        .favorite-btn {
            border: none;
            background: none;
            color: #6c757d;
            transition: color 0.2s;
        }
        .favorite-btn:hover, .favorite-btn.active {
            color: #dc3545;
        }
        .card-img-top {
            max-height: 900px;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1>Community Gallery</h1>
                <p class="text-muted">Share and discover amazing pet photos from our community</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/gallery/upload" class="btn btn-primary me-2">
                    <i class="bi bi-cloud-upload"></i> Upload Photo
                </a>
                <a href="/gallery/my-photos" class="btn btn-outline-secondary">
                    <i class="bi bi-images"></i> My Photos
                </a>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="row mb-4">
            <div class="col-md-8">
                <form class="d-flex">
                    <input type="text" name="search" class="form-control me-2" 
                           placeholder="Search photos..." value="<%= currentSearch || '' %>">
                    <button type="submit" class="btn btn-outline-primary">Search</button>
                    <% if (currentSearch || currentTag) { %>
                        <a href="/gallery" class="btn btn-outline-secondary ms-2">Clear</a>
                    <% } %>
                </form>
            </div>
        </div>

        <!-- Popular Tags -->
        <% if (popularTags.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <h5>Popular Tags:</h5>
                <div>
                    <% popularTags.forEach(tag => { %>
                        <a href="/gallery?tag=<%= tag.tag_name %>" 
                           class="btn btn-sm btn-outline-primary tag-badge <%= currentTag === tag.tag_name ? 'active' : '' %>">
                            #<%= tag.tag_name %> (<%= tag.usage_count %>)
                        </a>
                    <% }); %>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Photos Grid -->
        <div class="row">
            <% if (photos.length > 0) { %>
                <% photos.forEach(photo => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card photo-card">
                            <img src="<%= photo.photo_url %>" 
                                 class="card-img-top photo-image" 
                                 alt="<%= photo.title %>"
                                 style="cursor: pointer;"
                                 onclick="window.location.href='/gallery/photo/<%= photo.photo_id %>'">
                            
                            <div class="card-body">
                                <h6 class="card-title"><%= photo.title %></h6>
                                <p class="card-text small text-muted">
                                    By <%= photo.username %>
                                </p>
                                
                                <!-- Tags -->
                                <% if (photo.tags) { %>
                                    <div class="mb-2">
                                        <% photo.tags.split(',').forEach(tag => { %>
                                            <span class="badge bg-light text-dark tag-badge" 
                                                  onclick="window.location.href='/gallery?tag=<%= tag %>'">
                                                #<%= tag %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                                
                                <!-- Actions -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="favorite-btn <%= photo.is_favorited ? 'active' : '' %>" 
                                            onclick="toggleFavorite(<%= photo.photo_id %>, this)">
                                        <i class="bi bi-heart<%= photo.is_favorited ? '-fill' : '' %>"></i>
                                        <span class="favorite-count"><%= photo.favorite_count || 0 %></span>
                                    </button>
                                    <small class="text-muted">
                                        <%= new Date(photo.created_at).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <i class="bi bi-camera display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No photos found</h4>
                    <p class="text-muted">
                        <% if (currentSearch || currentTag) { %>
                            Try adjusting your search criteria
                        <% } else { %>
                            Be the first to share a photo!
                        <% } %>
                    </p>
                    <a href="/gallery/upload" class="btn btn-primary">Upload First Photo</a>
                </div>
            <% } %>
        </div>

        <!-- Load More -->
        <% if (hasMore) { %>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/gallery?page=<%= currentPage + 1 %><%= currentTag ? '&tag=' + currentTag : '' %><%= currentSearch ? '&search=' + currentSearch : '' %>" 
                   class="btn btn-outline-primary">
                    Load More Photos
                </a>
            </div>
        </div>
        <% } %>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function toggleFavorite(photoId, button) {
            try {
                const response = await fetch(`/gallery/photo/${photoId}/favorite`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    const icon = button.querySelector('i');
                    const countSpan = button.querySelector('.favorite-count');
                    
                    if (result.action === 'added') {
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        button.classList.add('active');
                    } else {
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        button.classList.remove('active');
                    }
                    
                    countSpan.textContent = result.favorite_count;
                }
            } catch (error) {
                console.error('Favorite error:', error);
                alert('Error updating favorite');
            }
        }
    </script>
</body>
</html>