            }
            
            .text-muted {
                font-size: 0.7rem !important;
            }
        }

        @media (max-width: 299px) {
            .photo-grid-column {
                flex: 0 0 100% !important;
                max-width: 100% !important;
                width: 100% !important;
                float: none !important;
            }
            
            .photo-image {
                height: 200px !important;
            }
        }

        @media (min-width: 581px) {
            .photo-grid-column {
                float: none !important;
            }
        }

