<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        .photo-card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
        }
        .photo-card:hover {
            transform: translateY(-5px);
        }
        .photo-image {
            height: 300px;
           width: 100;
        object-fit: cover;
        max-width: 90%; /* Add this to prevent overflow */
        width: 90%; /* Ensure it takes full container width */
   
            
        }
        .privacy-badge {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h1>My Photos</h1>
                <p class="text-muted">Manage your uploaded photos</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/gallery/upload" class="btn btn-primary">
                    <i class="bi bi-cloud-upload"></i> Upload New Photo
                </a>
            </div>
        </div>

        <!-- Success Message -->
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Photos Grid -->
        <div class="row">
            <% if (photos.length > 0) { %>
                <% photos.forEach(photo => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card photo-card">
                            <div class="position-relative">
                                <img src="<%= photo.photo_url %>" 
                                     class="card-img-top photo-image" 
                                     alt="<%= photo.title %>"
                                     style="cursor: pointer;"
                                     onclick="window.location.href='/gallery/photo/<%= photo.photo_id %>'">
                                
                                <!-- Privacy Badge -->
                                <span class="badge privacy-badge <%= photo.is_public ? 'bg-success' : 'bg-secondary' %>">
                                    <i class="bi bi-<%= photo.is_public ? 'globe' : 'lock' %>"></i>
                                    <%= photo.is_public ? 'Public' : 'Private' %>
                                </span>
                            </div>
                            
                            <div class="card-body">
                                <h6 class="card-title"><%= photo.title || 'Untitled' %></h6>
                                
                                <!-- Tags -->
                                <% if (photo.tags) { %>
                                    <div class="mb-2">
                                        <% photo.tags.split(',').forEach(tag => { %>
                                            <span class="badge bg-light text-dark small">
                                                #<%= tag %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                                
                                <!-- Stats -->
                                <div class="d-flex justify-content-between align-items-center text-muted small">
                                    <div>
                                        <i class="bi bi-heart"></i> <%= photo.favorite_count || 0 %>
                                    </div>
                                    <div>
                                        <%= new Date(photo.created_at).toLocaleDateString() %>
                                    </div>
                                </div>
                                
                                <!-- Actions -->
                                <div class="d-flex gap-1 mt-2">
                                    <a href="/gallery/photo/<%= photo.photo_id %>" 
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deletePhoto(<%= photo.photo_id %>, '<%= photo.title %>')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="empty-state">
                        <i class="bi bi-camera display-1 text-muted"></i>
                        <h3 class="mt-3 text-muted">No photos yet</h3>
                        <p class="text-muted mb-4">Start sharing your pet photos with the community!</p>
                        <a href="/gallery/upload" class="btn btn-primary btn-lg">
                            <i class="bi bi-cloud-upload"></i> Upload Your First Photo
                        </a>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Load More -->
        <% if (hasMore) { %>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/gallery/my-photos?page=<%= currentPage + 1 %>" 
                   class="btn btn-outline-primary">
                    Load More Photos
                </a>
            </div>
        </div>
        <% } %>
    </div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deletePhoto(photoId, photoTitle) {
            if (!confirm(`Are you sure you want to delete "${photoTitle}"? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/gallery/photo/${photoId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload(); // Reload to show updated list
                } else {
                    alert('Error deleting photo: ' + result.error);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Error deleting photo');
            }
        }

        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
</body>
</html>