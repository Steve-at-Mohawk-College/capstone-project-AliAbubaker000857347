<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        .photo-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .photo-image {
            max-width: 100%;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }
        .action-btn {
            transition: all 0.2s;
        }
        .action-btn:hover {
            transform: scale(1.1);
        }
        .tag-badge {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <% if (!photo) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> Photo not found or you don't have permission to view it.
            </div>
            <div class="text-center mt-4">
                <a href="/gallery" class="btn btn-primary">Back to Gallery</a>
            </div>
        <% } else { %>
            <div class="photo-container">
                <!-- Back Button -->
                <div class="mb-4">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

                <!-- Photo -->
                <div class="text-center mb-4">
                    <img src="<%= photo.photo_url %>" 
                         class="photo-image" 
                         alt="<%= photo.title %>">
                </div>

                <!-- Photo Info -->
                <div class="card">
                    <div class="card-body">
                        <!-- Header with title and actions -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h2 class="card-title mb-1"><%= photo.title || 'Untitled' %></h2>
                                <div class="d-flex align-items-center text-muted">
                                    <img src="<%= photo.profile_picture_url || '/images/default-avatar.png' %>" 
                                         class="user-avatar me-2" 
                                         alt="<%= photo.username %>">
                                    <span>By <%= photo.username %></span>
                                    <span class="mx-2">•</span>
                                    <span><%= new Date(photo.created_at).toLocaleDateString() %></span>
                                    <span class="mx-2">•</span>
                                    <span class="badge <%= photo.is_public ? 'bg-success' : 'bg-secondary' %>">
                                        <i class="bi bi-<%= photo.is_public ? 'globe' : 'lock' %>"></i>
                                        <%= photo.is_public ? 'Public' : 'Private' %>
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <!-- Favorite Button -->
                                <button class="btn btn-outline-danger action-btn <%= photo.is_favorited ? 'active' : '' %>" 
                                        onclick="toggleFavorite(<%= photo.photo_id %>, this)">
                                    <i class="bi bi-heart<%= photo.is_favorited ? '-fill' : '' %>"></i>
                                    <span class="favorite-count"><%= photo.favorite_count || 0 %></span>
                                </button>
                            </div>
                        </div>

                        <!-- Description -->
                        <% if (photo.description) { %>
                            <p class="card-text mb-3"><%= photo.description %></p>
                        <% } %>

                        <!-- Tags -->
                        <% if (photo.tags) { %>
                            <div class="mb-3">
                                <strong>Tags:</strong>
                                <% photo.tags.split(',').forEach(tag => { %>
                                    <span class="badge bg-primary tag-badge me-1" 
                                          onclick="window.location.href='/gallery?tag=<%= tag %>'">
                                        #<%= tag %>
                                    </span>
                                <% }); %>
                            </div>
                        <% } %>

                        <!-- Add Tag Form (only for photo owner) -->
                        <% if (locals.userId === photo.user_id) { %>
                            <div class="mt-4 p-3 bg-light rounded">
                                <h6>Add Tags</h6>
                                <form class="d-flex gap-2" onsubmit="addTag(event, <%= photo.photo_id %>)">
                                    <input type="text" class="form-control" id="tagInput" 
                                           placeholder="Enter a tag..." required>
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        <i class="bi bi-plus"></i> Add
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Owner Actions -->
                <% if (locals.userId === photo.user_id) { %>
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">Photo Management</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-warning" onclick="editPhoto(<%= photo.photo_id %>)">
                                    <i class="bi bi-pencil"></i> Edit Details
                                </button>
                                <button class="btn btn-outline-danger" 
                                        onclick="deletePhoto(<%= photo.photo_id %>, '<%= photo.title %>')">
                                    <i class="bi bi-trash"></i> Delete Photo
                                </button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- Edit Photo Modal -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Photo Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <div class="mb-3">
                            <label for="editTitle" class="form-label">Title</label>
                            <input type="text" class="form-control" id="editTitle" required>
                        </div>
                        <div class="mb-3">
                            <label for="editDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="editDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="editIsPublic">
                                <label class="form-check-label" for="editIsPublic">
                                    Make photo public
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="savePhotoChanges()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Store modal instance globally
        let editModal = null;

        // Initialize modal when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            const modalElement = document.getElementById('editModal');
            if (modalElement) {
                editModal = new bootstrap.Modal(modalElement);
            }
        });

        async function toggleFavorite(photoId, button) {
            try {
                const response = await fetch(`/gallery/photo/${photoId}/favorite`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    const icon = button.querySelector('i');
                    const countSpan = button.querySelector('.favorite-count');
                    
                    if (result.action === 'added') {
                        icon.classList.remove('bi-heart');
                        icon.classList.add('bi-heart-fill');
                        button.classList.add('active');
                    } else {
                        icon.classList.remove('bi-heart-fill');
                        icon.classList.add('bi-heart');
                        button.classList.remove('active');
                    }
                    
                    countSpan.textContent = result.favorite_count;
                }
            } catch (error) {
                console.error('Favorite error:', error);
                alert('Error updating favorite');
            }
        }

        async function addTag(event, photoId) {
            event.preventDefault();
            const tagInput = document.getElementById('tagInput');
            const tag = tagInput.value.trim();
            
            if (!tag) return;

            try {
                const response = await fetch(`/gallery/photo/${photoId}/tags`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ tag })
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload(); // Reload to show new tag
                } else {
                    alert('Error adding tag: ' + result.error);
                }
            } catch (error) {
                console.error('Add tag error:', error);
                alert('Error adding tag');
            }
        }

        // In your photo-detail.ejs, update the editPhoto function:
function editPhoto(photoId) {
    // Debug current state
    console.log('Current photo is_public:', <%= photo.is_public %>);
    console.log('Current photo is_public type:', typeof <%= photo.is_public %>);
    
    // Populate modal with current data
    document.getElementById('editTitle').value = '<%= photo.title || "" %>';
    document.getElementById('editDescription').value = '<%= photo.description || "" %>';
    document.getElementById('editIsPublic').checked = <%= photo.is_public %>;
    
    // Debug the checkbox state
    console.log('Checkbox checked:', document.getElementById('editIsPublic').checked);
    
    // Store photo ID for the save function
    document.getElementById('editForm').dataset.photoId = photoId;
    
    // Show modal using the stored instance
    if (editModal) {
        editModal.show();
    } else {
        // Fallback: try to create modal instance
        const modalElement = document.getElementById('editModal');
        if (modalElement && typeof bootstrap !== 'undefined') {
            editModal = new bootstrap.Modal(modalElement);
            editModal.show();
        } else {
            console.error('Bootstrap not loaded');
            alert('Error: Page components not loaded properly. Please refresh the page.');
        }
    }
}

        async function savePhotoChanges() {
            const photoId = document.getElementById('editForm').dataset.photoId;
            const title = document.getElementById('editTitle').value;
            const description = document.getElementById('editDescription').value;
            const is_public = document.getElementById('editIsPublic').checked;

            // Basic validation
            if (!title.trim()) {
                alert('Please enter a title');
                return;
            }

            try {
                const response = await fetch(`/gallery/photo/${photoId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        title: title.trim(), 
                        description: description.trim(), 
                        is_public: is_public 
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    // Hide modal first
                    if (editModal) {
                        editModal.hide();
                    }
                    // Then reload to show changes
                    location.reload();
                } else {
                    alert('Error updating photo: ' + result.error);
                }
            } catch (error) {
                console.error('Update error:', error);
                alert('Error updating photo: ' + error.message);
            }
        }

        async function deletePhoto(photoId, photoTitle) {
            if (!confirm(`Are you sure you want to delete "${photoTitle}"? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/gallery/photo/${photoId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    window.location.href = '/gallery/my-photos?message=Photo deleted successfully';
                } else {
                    alert('Error deleting photo: ' + result.error);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Error deleting photo: ' + error.message);
            }
        }

        // Close modal when clicking outside or pressing ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && editModal) {
                editModal.hide();
            }
        });
    </script>
</body>
</html>