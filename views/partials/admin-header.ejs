<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Panel - Pet Care Management' %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/css/theme.css">
    <style>
        /* Admin-specific styles */
        .admin-navbar {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 0.5rem 0;
        }
        
        .admin-navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: white !important;
            display: flex;
            align-items: center;
            margin-right: 2rem;
        }
        
        .admin-navbar-brand i {
            font-size: 1.6rem;
            margin-right: 0.5rem;
        }
        
        .admin-nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9) !important;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            margin: 0 0.2rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }
        
        .admin-nav-link:hover,
        .admin-nav-link.active {
            background: rgba(255, 255, 255, 0.15);
            color: white !important;
            transform: translateY(-1px);
        }
        
        .admin-nav-link i {
            margin-right: 0.5rem;
            font-size: 1.1rem;
        }
        
        .admin-badge {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            padding: 0.15rem 0.5rem;
            border-radius: 10px;
            font-size: 0.75rem;
            margin-left: 0.5rem;
        }
        
        .admin-user-menu {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 0.3rem 0.8rem;
        }
        
        .admin-user-avatar {
            width: 32px;
            height: 32px;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }
        
        .admin-dropdown-menu {
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            border-radius: 12px;
            padding: 0.5rem;
            background: #2c3e50;
        }
        
        .admin-dropdown-item {
            color: white;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
        }
        
        .admin-dropdown-item:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .admin-dropdown-divider {
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        /* Mobile responsiveness */
        @media (max-width: 991.98px) {
            .admin-navbar-nav {
                margin: 0.5rem 0;
            }
            
            .admin-nav-link {
                margin: 0.2rem 0;
                text-align: center;
                padding: 0.6rem 1rem !important;
            }
            
            .admin-user-menu {
                justify-content: center;
                margin: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
    <!-- Admin Navigation -->
    <nav class="navbar navbar-expand-lg admin-navbar">
        <div class="container container-custom">
            <a class="navbar-brand admin-navbar-brand" href="/admin/dashboard">
                <i class="bi bi-shield-lock"></i><strong>Admin Panel</strong>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="adminNavbar">
                <!-- Admin navigation -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link admin-nav-link <%= title === 'Admin Dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                            <i class="bi bi-speedometer2"></i>Dashboard
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link admin-nav-link <%= title === 'User Management' ? 'active' : '' %>" href="/admin/users">
                            <i class="bi bi-people"></i>Users
                            <% if (typeof userCount !== 'undefined' && userCount > 0) { %>
                                <span class="admin-badge"><%= userCount %></span>
                            <% } %>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link admin-nav-link <%= title === 'Post Moderation' ? 'active' : '' %>" href="/admin/posts">
                            <i class="bi bi-chat-dots"></i>Posts
                            <% if (typeof pendingPosts !== 'undefined' && pendingPosts.length > 0) { %>
                                <span class="admin-badge"><%= pendingPosts.length %></span>
                            <% } %>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link admin-nav-link" href="/dashboard">
                            <i class="bi bi-house"></i>User View
                        </a>
                    </li>
                </ul>

                <!-- Admin user controls -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <div class="admin-user-menu d-flex align-items-center">
                            <img src="<%= typeof profilePicture !== 'undefined' ? profilePicture : '/images/default-avatar.png' %>" 
                                class="admin-user-avatar rounded-circle me-2" 
                                alt="Admin Profile">
                            <span class="text-white d-none d-md-inline">
                                <%= username %> (Admin)
                            </span>
                        </div>
                    </li>
                    
                    <li class="nav-item ms-2">
                        <form action="/auth/logout" method="POST">
                            <button type="submit" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-box-arrow-right me-1"></i>
                                Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container-custom py-4">