 <script>// Simplified Notification System for Upcoming Tasks
class NotificationSystem {
  constructor() {
    this.checkInterval = null;
    this.isDropdownOpen = false;
    this.init();
  }

  init() {
    this.loadUpcomingTasks();
    this.setupEventListeners();
    
    this.checkInterval = setInterval(() => {
      this.loadUpcomingTasks();
    }, 30000); // Check every 30 seconds
  }

  async loadUpcomingTasks() {
    try {
      const upcomingTasks = await this.fetchUpcomingTasks();
      this.updateNotificationBadge(upcomingTasks);
      
      if (this.isDropdownOpen) {
        this.renderUpcomingTasks(upcomingTasks);
      }
    } catch (error) {
      console.error('Error loading upcoming tasks:', error);
    }
  }

  async fetchUpcomingTasks() {
    try {
      const response = await fetch('/tasks/upcoming?days=3&limit=5');
      if (response.ok) {
        return await response.json();
      }
      return [];
    } catch (error) {
      console.error('Error fetching upcoming tasks:', error);
      return [];
    }
  }

  updateNotificationBadge(upcomingTasks) {
    const badge = document.getElementById('notificationBadge');
    const urgentTasks = upcomingTasks.filter(task => {
      const dueDate = new Date(task.due_date);
      const now = new Date();
      const daysUntilDue = Math.ceil((dueDate - now) / (1000 * 60 * 60 * 24));
      return daysUntilDue <= 1; // Only count urgent tasks (today/tomorrow)
    });
    
    if (urgentTasks.length > 0) {
      badge.textContent = urgentTasks.length;
      badge.style.display = 'block';
    } else {
      badge.style.display = 'none';
    }
  }

  renderUpcomingTasks(tasks) {
    const container = document.getElementById('notificationsList');
    
    if (!container) return;
    
    if (tasks.length === 0) {
      container.innerHTML = `
        <div class="px-3 py-4 text-center text-muted">
          <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
          <div class="mt-2">No upcoming tasks</div>
          <small>You're all caught up!</small>
        </div>
      `;
      return;
    }

    let html = tasks.map((task, index) => {
      const dueDate = new Date(task.due_date);
      const now = new Date();
      const daysUntilDue = Math.ceil((dueDate - now) / (1000 * 60 * 60 * 24));
      
      let urgencyClass = '';
      let urgencyIcon = '';
      
      if (daysUntilDue <= 0) {
        urgencyClass = 'text-danger';
        urgencyIcon = 'bi-exclamation-triangle-fill';
      } else if (daysUntilDue === 1) {
        urgencyClass = 'text-warning';
        urgencyIcon = 'bi-exclamation-circle';
      } else {
        urgencyClass = 'text-info';
        urgencyIcon = 'bi-calendar-event';
      }
      
      return `
        <div class="notification-item p-3 border-bottom" style="${index === tasks.length - 1 ? 'border-bottom: none !important;' : ''}">
          <div class="d-flex align-items-start">
            <i class="bi ${urgencyIcon} ${urgencyClass} me-2 fs-5"></i>
            <div class="flex-grow-1">
              <h6 class="mb-1 fw-bold">${task.title}</h6>
              <div class="d-flex align-items-center gap-2 mb-1">
                <span class="badge ${this.getPriorityBadgeClass(task.priority)}">
                  ${task.priority}
                </span>
                <small class="text-muted">${task.pet_name}</small>
              </div>
              <p class="mb-1 small">
                <i class="bi bi-calendar me-1"></i>
                ${dueDate.toLocaleDateString()} 
                <span class="${urgencyClass} fw-bold">
                  (${daysUntilDue <= 0 ? 'TODAY' : `${daysUntilDue} day${daysUntilDue !== 1 ? 's' : ''} left`})
                </span>
              </p>
            </div>
          </div>
        </div>
      `;
    }).join('');

    container.innerHTML = html;
  }

  getPriorityBadgeClass(priority) {
    const classes = {
      'high': 'bg-danger',
      'medium': 'bg-warning',
      'low': 'bg-success'
    };
    return classes[priority] || 'bg-secondary';
  }

  setupEventListeners() {
    // Dropdown open/close events
    const dropdownElement = document.getElementById('notificationDropdown');
    if (dropdownElement) {
      dropdownElement.addEventListener('show.bs.dropdown', () => {
        this.isDropdownOpen = true;
        this.loadUpcomingTasks();
      });

      dropdownElement.addEventListener('hide.bs.dropdown', () => {
        this.isDropdownOpen = false;
      });
    }
  }

  destroy() {
    if (this.checkInterval) {
      clearInterval(this.checkInterval);
    }
  }
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
  window.notificationSystem = new NotificationSystem();
});
