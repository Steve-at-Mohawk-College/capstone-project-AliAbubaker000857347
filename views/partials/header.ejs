    if (badgeDesktop) {
      badgeDesktop.textContent = urgentTasks.length;
      badgeDesktop.style.display = 'flex'; // Changed to flex for better centering
    }
    
    // Add has-notifications class for visual enhancement
    if (bellMobile) bellMobile.classList.add('has-notifications');
    if (bellDesktop) bellDesktop.classList.add('has-notifications');
  } else {
    if (badgeMobile) badgeMobile.style.display = 'none';
    if (badgeDesktop) badgeDesktop.style.display = 'none';
    
    // Remove has-notifications class
    if (bellMobile) bellMobile.classList.remove('has-notifications');
    if (bellDesktop) bellDesktop.classList.remove('has-notifications');
  }
}

  renderUpcomingTasks(tasks) {
    // Update both mobile and desktop notification lists
    const containerMobile = document.getElementById('notificationsListMobile');
    const containerDesktop = document.getElementById('notificationsListDesktop');
    
    const renderToContainer = (container) => {
      if (!container) return;
      
      if (tasks.length === 0) {
        container.innerHTML = `
          <div class="px-3 py-4 text-center text-muted">
            <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
            <div class="mt-2">No upcoming tasks</div>
            <small>You're all caught up!</small>
          </div>
        `;
        return;
      }

      let html = tasks.map((task, index) => {
        const dueDate = new Date(task.due_date);
        const now = new Date();
        const daysUntilDue = Math.ceil((dueDate - now) / (1000 * 60 * 60 * 24));
        
        let urgencyClass = '';
        let urgencyIcon = '';
        
        if (daysUntilDue <= 0) {
          urgencyClass = 'text-danger';
          urgencyIcon = 'bi-exclamation-triangle-fill';
        } else if (daysUntilDue === 1) {
          urgencyClass = 'text-warning';
          urgencyIcon = 'bi-exclamation-circle';
        } else {
          urgencyClass = 'text-info';
          urgencyIcon = 'bi-calendar-event';
        }
        
        return `
          <div class="notification-item p-3 border-bottom" style="${index === tasks.length - 1 ? 'border-bottom: none !important;' : ''}">
            <div class="d-flex align-items-start">
              <i class="bi ${urgencyIcon} ${urgencyClass} me-2 fs-5"></i>
              <div class="flex-grow-1">
                <h6 class="mb-1 fw-bold">${task.title}</h6>
                <div class="d-flex align-items-center gap-2 mb-1">
                  <span class="badge ${this.getPriorityBadgeClass(task.priority)}">
                    ${task.priority}
                  </span>
                  <small class="text-muted">${task.pet_name}</small>
                </div>
                <p class="mb-1 small">
                  <i class="bi bi-calendar me-1"></i>
                  ${dueDate.toLocaleDateString()} 
                  <span class="${urgencyClass} fw-bold">
                    (${daysUntilDue <= 0 ? 'TODAY' : `${daysUntilDue} day${daysUntilDue !== 1 ? 's' : ''} left`})
                  </span>
                </p>
              </div>
            </div>
          </div>
        `;
      }).join('');

      container.innerHTML = html;
    };

    renderToContainer(containerMobile);
    renderToContainer(containerDesktop);
  }

  getPriorityBadgeClass(priority) {
    const classes = {
      'high': 'bg-danger',
      'medium': 'bg-warning',
      'low': 'bg-success'
    };
    return classes[priority] || 'bg-secondary';
  }

  setupEventListeners() {
    // Dropdown open/close events for both mobile and desktop
    const dropdownMobile = document.getElementById('notificationDropdownMobile');
    const dropdownDesktop = document.getElementById('notificationDropdownDesktop');
    
    const setupDropdown = (dropdownElement) => {
      if (dropdownElement) {
        dropdownElement.addEventListener('show.bs.dropdown', () => {
          this.isDropdownOpen = true;
          this.loadUpcomingTasks();
        });

        dropdownElement.addEventListener('hide.bs.dropdown', () => {
          this.isDropdownOpen = false;
        });
      }
    };

    setupDropdown(dropdownMobile);
    setupDropdown(dropdownDesktop);
  }

  destroy() {
    if (this.checkInterval) {
      clearInterval(this.checkInterval);
    }
  }
}
