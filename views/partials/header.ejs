<style>
/* ===== RESPONSIVE HEADER STYLES ===== */
:root {
  --primary: #4361ee;
  --primary-dark: #3a56d4;
  --secondary: #06d6a0;
  --accent: #ff6b6b;
  --light: #f8f9fa;
  --dark: #212529;
  --gray: #6c757d;
  --light-gray: #e9ecef;
  --border-radius: 12px;
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  --transition: all 0.3s ease;
}

/* Base Header Styles */
.navbar-modern {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  padding: 0.75rem 0;
  box-shadow: var(--shadow);
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 1030;
}

.navbar-modern::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, var(--primary), var(--secondary));
  opacity: 0.7;
}

/* Brand Logo - Responsive */
.navbar-brand-modern {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  color: var(--primary) !important;
  display: flex;
  align-items: center;
  transition: var(--transition);
  font-size: 1.4rem;
}

.navbar-brand-modern i {
  font-size: 1.6rem;
  margin-right: 0.5rem;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ===== MOBILE FIRST STYLES (Default for all screens) ===== */

/* Mobile Header Layout */
.navbar-modern .container-fluid {
  padding: 0 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}

/* Mobile Header Icons */
.header-icons.d-lg-none {
  display: flex !important;
  align-items: center;
  gap: 0.5rem;
  order: 2;
}

/* Mobile Icons - Compact and Professional */
.header-icons.d-lg-none .profile-modern,
.header-icons.d-lg-none .theme-toggle-modern,
.header-icons.d-lg-none .notification-bell {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(67, 97, 238, 0.08);
  border: 1px solid rgba(67, 97, 238, 0.12);
  color: var(--gray);
  transition: all 0.3s ease;
  text-decoration: none;
}

.header-icons.d-lg-none .profile-modern:hover,
.header-icons.d-lg-none .theme-toggle-modern:hover,
.header-icons.d-lg-none .notification-bell:hover {
  background: rgba(67, 97, 238, 0.15);
  border-color: var(--primary);
  color: var(--primary);
  transform: scale(1.05);
}

/* Mobile User Avatar */
.user-avatar-modern {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1rem;
  border: 2px solid white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Mobile Toggler Button */
.navbar-toggler {
  border: none;
  padding: 0.5rem 0.6rem;
  border-radius: var(--border-radius);
  background: rgba(67, 97, 238, 0.08);
  border: 1px solid rgba(67, 97, 238, 0.12);
  transition: all 0.3s ease;
  order: 1;
  margin-left: 0.5rem;
}

.navbar-toggler:focus {
  box-shadow: 0 0 0 2px rgba(67, 97, 238, 0.25);
  outline: none;
}

.navbar-toggler:hover {
  background: rgba(67, 97, 238, 0.15);
  border-color: var(--primary);
  transform: scale(1.05);
}

/* Mobile Navigation Menu */
.navbar-collapse {
  position: fixed;
  top: 100%;
  left: 0;
  right: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  max-height: calc(100vh - 70px);
  overflow-y: auto;
  z-index: 1020;
  margin-top: 0;
}

/* Mobile Navigation Items */
.navbar-nav {
  padding: 1rem 0;
  margin: 0;
}

.nav-item-modern {
  margin: 0;
}

.nav-link-modern {
  font-weight: 500;
  color: var(--dark) !important;
  transition: var(--transition);
  border-radius: 0;
  padding: 1rem 1.5rem !important;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  font-size: 1rem;
}

.nav-link-modern:hover,
.nav-link-modern:focus {
  color: var(--primary) !important;
  background-color: rgba(67, 97, 238, 0.08);
}

.nav-link-modern.active {
  color: var(--primary) !important;
  font-weight: 600;
  background-color: rgba(67, 97, 238, 0.05);
}

.nav-link-modern.active::after {
  display: none;
}

/* Mobile Dropdown Menus */
.navbar-collapse .dropdown-menu {
  position: static !important;
  float: none !important;
  width: 100% !important;
  margin: 0 !important;
  border: none !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  background: rgba(0, 0, 0, 0.02);
  padding: 0;
}

.navbar-collapse .dropdown-item {
  padding: 0.9rem 2rem !important;
  border-radius: 0 !important;
  border-bottom: 1px solid rgba(0, 0, 0, 0.03);
  font-size: 0.95rem;
}

/* Mobile Header Icons Dropdowns */
.header-icons.d-lg-none .dropdown-menu {
  position: fixed !important;
  top: 70px !important;
  right: 1rem !important;
  left: auto !important;
  width: 280px !important;
  max-width: 85vw;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  border: 1px solid rgba(0, 0, 0, 0.1);
  z-index: 1060;
}

/* Notification Badge */
.notification-bell {
  position: relative;
  background: red;
}

.notification-bell .badge {
  position: absolute;
  top: -2px;
  right: -2px;
  font-size: 0.7rem;
  padding: 0.25rem 0.4rem;
  min-width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid white;
}

/* ===== TABLET STYLES (768px and up) ===== */
@media (min-width: 768px) {
  .navbar-brand-modern {
    font-size: 1.5rem;
  }
  
  .navbar-brand-modern i {
    font-size: 1.7rem;
  }
  
  .header-icons.d-lg-none .profile-modern,
  .header-icons.d-lg-none .theme-toggle-modern,
  .header-icons.d-lg-none .notification-bell {
    width: 46px;
    height: 46px;
  }
  
  .user-avatar-modern {
    width: 38px;
    height: 38px;
  }
  
  .navbar-collapse {
    top: 100%;
  }
}

/* ===== DESKTOP STYLES (992px and up) ===== */
@media (min-width: 992px) {
  .navbar-modern {
    position: relative;
    padding: 0.8rem 0;
  }
  
  .navbar-modern .container-fluid {
    padding: 0 1.5rem;
    flex-wrap: nowrap;
  }
  
  /* Hide mobile icons */
  .header-icons.d-lg-none {
    display: none !important;
  }
  
  /* Show desktop navigation */
  .navbar-collapse {
    position: static;
    background: transparent;
    backdrop-filter: none;
    border: none;
    box-shadow: none;
    max-height: none;
    overflow-y: visible;
  }
  
  .navbar-nav {
    padding: 0;
    flex-direction: row;
    align-items: center;
  }
  
  .nav-item-modern {
    margin: 0 0.15rem;
  }
  
  .nav-link-modern {
    padding: 0.7rem 1rem !important;
    border-radius: var(--border-radius);
    border-bottom: none;
    font-size: 0.95rem;
  }
  
  .nav-link-modern.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background-color: var(--primary);
    display: block;
  }
  
  /* Desktop Dropdown Menus */
  .navbar-nav .dropdown-menu {
    position: absolute !important;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: 0.5rem;
    margin-top: 0.5rem;
    width: 220px;
  }
  
  .navbar-nav .dropdown-item {
    padding: 0.75rem 1rem !important;
    border-radius: 8px;
    border-bottom: none;
    margin: 0.1rem 0;
    font-size: 0.9rem;
  }
  
  /* Desktop Header Icons */
  .header-icons.d-none.d-lg-flex {
    display: flex !important;
    align-items: center;
    gap: 0.8rem;
    margin-left: auto;
  }
  
  /* Desktop Profile Section */
  .header-icons.d-none.d-lg-flex .profile-modern {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    background: rgba(67, 97, 238, 0.08);
    border: 1px solid rgba(67, 97, 238, 0.12);
    transition: all 0.3s ease;
    text-decoration: none;
    color: var(--dark);
  }
  
  .header-icons.d-none.d-lg-flex .profile-modern:hover {
    background: rgba(67, 97, 238, 0.15);
    border-color: var(--primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(67, 97, 238, 0.15);
  }
  
  .header-icons.d-none.d-lg-flex .username-modern {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--dark);
    margin: 0;
  }
  
  .header-icons.d-none.d-lg-flex .user-avatar-modern {
    width: 36px;
    height: 36px;
  }
  
  /* Desktop Theme Toggle & Notification */
  .header-icons.d-none.d-lg-flex .theme-toggle-modern,
  .header-icons.d-none.d-lg-flex .notification-bell {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(67, 97, 238, 0.08);
    border: 1px solid rgba(67, 97, 238, 0.12);
    color: var(--gray);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .header-icons.d-none.d-lg-flex .theme-toggle-modern:hover,
  .header-icons.d-none.d-lg-flex .notification-bell:hover {
    background: rgba(67, 97, 238, 0.15);
    border-color: var(--primary);
    color: var(--primary);
    transform: scale(1.05);
  }
  
  /* Desktop Dropdowns */
  .header-icons.d-none.d-lg-flex .dropdown-menu {
    position: absolute !important;
    top: 100% !important;
    right: 0 !important;
    left: auto !important;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(0, 0, 0, 0.1);
    margin-top: 0.75rem;
    min-width: 250px;
  }
}

/* ===== LARGE DESKTOP STYLES (1200px and up) ===== */
@media (min-width: 1200px) {
