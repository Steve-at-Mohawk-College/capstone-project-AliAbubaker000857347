/* ===== ENHANCED NOTIFICATION BELL VISIBILITY ===== */

/* Notification Bell Base Styles */
.notification-bell {
  position: relative;
  background: rgba(67, 97, 238, 0.15) !important;
  border: 2px solid rgba(67, 97, 238, 0.3) !important;
  transition: var(--transition);
}

.notification-bell:hover {
  background: rgba(67, 97, 238, 0.25) !important;
  border-color: rgba(67, 97, 238, 0.5) !important;
  transform: scale(1.1);
}

/* Notification Icon - Light Mode */
.notification-bell i {
  color: var(--primary) !important;
  font-size: 1.2rem;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* Notification Icon - Dark Mode */
[data-theme="dark"] .notification-bell i {
  color: #ffffff !important;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  filter: brightness(1.2);
}

/* Notification Badge - Enhanced Visibility */
.notification-bell .badge {
  position: absolute;
  top: -5px;
  right: -5px;
  font-size: 0.7rem;
  font-weight: 800;
  padding: 0.3rem 0.4rem;
  min-width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid var(--light);
  background: linear-gradient(135deg, #ff4757, #ff3742) !important;
  box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
  animation: pulse 2s infinite;
}

/* Dark mode badge border */
[data-theme="dark"] .notification-bell .badge {
  border: 2px solid var(--dark) !important;
  box-shadow: 0 2px 10px rgba(255, 71, 87, 0.6);
}

/* Pulsing animation for urgency */
@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 3px 12px rgba(255, 71, 87, 0.6);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
  }
}

/* Mobile-specific notification styles */
@media (max-width: 991.98px) {
  .header-icons-mobile .notification-bell {
    background: rgba(67, 97, 238, 0.2) !important;
    border: 2px solid rgba(67, 97, 238, 0.4) !important;
  }
  
  .header-icons-mobile .notification-bell i {
    font-size: 1.3rem;
  }
  
  .header-icons-mobile .notification-bell .badge {
    top: -6px;
    right: -6px;
    font-size: 0.75rem;
    min-width: 22px;
    height: 22px;
