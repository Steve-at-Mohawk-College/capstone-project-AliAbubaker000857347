    font-size: 0.9rem;
  }
  
  .header-icons.d-lg-none .dropdown-menu {
    width: 260px !important;
    right: 0.5rem !important;
  }
  
  .nav-link-modern {
    padding: 0.9rem 1.25rem !important;
    font-size: 0.95rem;
  }
}

