<style>
/* ===== MODERN HEADER VARIABLES ===== */
:root {
  --primary: #4361ee;
  --primary-dark: #3a56d4;
  --primary-light: #eef2ff;
  --secondary: #06d6a0;
  --accent: #ff6b6b;
  --light: #f8f9fa;
  --dark: #1a1d21;
  --gray: #6c757d;
  --light-gray: #e9ecef;
  --border-radius: 12px;
  --border-radius-sm: 8px;
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 10px 40px rgba(0, 0, 0, 0.12);
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --glass-bg: rgba(255, 255, 255, 0.85);
  --glass-border: rgba(255, 255, 255, 0.2);
}

[data-theme="dark"] {
  --light: #1a1d21;
  --dark: #f8f9fa;
  --gray: #a0a0a0;
  --light-gray: #2d3239;
  --glass-bg: rgba(26, 29, 33, 0.85);
  --glass-border: rgba(255, 255, 255, 0.1);
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
  --shadow-lg: 0 10px 40px rgba(0, 0, 0, 0.35);
}

/* ===== BASE STYLES ===== */
* {
  box-sizing: border-box;
}

body {
  font-family: 'Poppins', sans-serif;
  background-color: var(--light);
  color: var(--dark);
  transition: var(--transition);
}

/* ===== MODERN NAVBAR STYLES ===== */
.navbar-modern {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--glass-border);
  padding: 0.75rem 0;
  box-shadow: var(--shadow);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 1030;
  transition: var(--transition);
}

/* Brand Logo */
.navbar-brand-modern {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  color: var(--primary) !important;
  display: flex;
  align-items: center;
  transition: var(--transition);
  font-size: 1.5rem;
  text-decoration: none;
  gap: 0.5rem;
}

.navbar-brand-modern i {
  font-size: 1.8rem;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Container Layout */
.navbar-modern .container-fluid {
  padding: 0 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}

/* ===== MOBILE STYLES ===== */
@media (max-width: 991.98px) {
  /* Mobile Header Layout */
  .navbar-modern .container-fluid {
    padding: 0 0.75rem;
  }


/* Mobile Navigation Menu - Opens from left */
  .navbar-collapse-modern {
    position: fixed;
    top: 100%;
    left: 0;
    width: 85%;
    max-width: 320px;
    height: calc(100vh - 70px);
    background: var(--light); /* Changed from glass-bg to solid light */
    backdrop-filter: none; /* Remove blur effect */
    -webkit-backdrop-filter: none; /* Remove blur effect */
    border-right: 1px solid var(--glass-border);
    box-shadow: var(--shadow-lg);
    z-index: 1020;
    margin-top: 0;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  .navbar-collapse-modern.show {
    transform: translateX(0);
  }

  /* Mobile Navigation Items */
  .navbar-nav-modern {
    padding: 1rem 0;
    margin: 0;
    height: 100%;
    overflow-y: auto;
    background: var(--light); /* Ensure solid background */
  }

  .nav-item-modern {
    margin: 0;
  }

  .nav-link-modern {
    font-weight: 500;
    color: var(--dark) !important;
    transition: var(--transition);
    border-radius: 0;
    padding: 1rem 1.5rem !important;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--light-gray); /* Use light-gray for better contrast */
    font-size: 1rem;
    text-decoration: none;
    background: var(--light); /* Solid background for links */
  }

  .nav-link-modern:hover,
  .nav-link-modern:focus {
    color: var(--primary) !important;
    background-color: rgba(67, 97, 238, 0.08);
  }

  .nav-link-modern.active {
    color: var(--primary) !important;
    font-weight: 600;
    background-color: rgba(67, 97, 238, 0.05);
    border-left: 4px solid var(--primary);
  }

  /* Mobile Dropdown Menus */
  .navbar-collapse-modern .dropdown-menu {
    position: static !important;
    float: none !important;
    width: 100% !important;
    margin: 0 !important;
    border: none !important;
    border-radius: 0 !important;
    box-shadow: none !important;
    background: var(--light); /* Solid background for dropdowns */
    padding: 0;
  }

  .navbar-collapse-modern .dropdown-item {
    padding: 0.9rem 2rem !important;
    border-radius: 0 !important;
    border-bottom: 1px solid var(--light-gray); /* Use light-gray for better contrast */
    font-size: 0.95rem;
    color: var(--dark);
    background: var(--light); /* Solid background for dropdown items */
  }

  .navbar-collapse-modern .dropdown-item:hover {
    background-color: rgba(67, 97, 238, 0.08);
  }
  /* Mobile Header Icons */
  .header-icons-mobile {
    display: flex !important;
    align-items: center;
    gap: 0.5rem;
    order: 2;
  }

  .header-icons-mobile .profile-modern,
  .header-icons-mobile .theme-toggle-modern,
  .header-icons-mobile .notification-bell {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(67, 97, 238, 0.1);
    border: 1px solid rgba(67, 97, 238, 0.2);
    color: var(--gray);
    transition: var(--transition);
    text-decoration: none;
  }

  .header-icons-mobile .profile-modern:hover,
  .header-icons-mobile .theme-toggle-modern:hover,
  .header-icons-mobile .notification-bell:hover {
    background: rgba(67, 97, 238, 0.15);
    color: var(--primary);
    transform: scale(1.05);
  }

  /* Mobile Dropdowns */
  .header-icons-mobile .dropdown-menu {
    position: fixed !important;
    top: 70px !important;
    right: 1rem !important;
    left: auto !important;
    width: 280px !important;
    max-width: 85vw;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--glass-border);
    z-index: 1060;
  }
  /* Mobile Toggle Button */
  .navbar-toggler-modern {
    border: none;
    padding: 0.5rem;
    border-radius: var(--border-radius-sm);
    background: rgba(67, 97, 238, 0.1);
    border: 1px solid rgba(67, 97, 238, 0.2);
    transition: var(--transition);
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    order: 0;
    margin-right: 0.5rem;
  }

  .navbar-toggler-modern:focus {
    box-shadow: 0 0 0 2px rgba(67, 97, 238, 0.25);
    outline: none;
  }

  .navbar-toggler-modern:hover {
    background: rgba(67, 97, 238, 0.15);
    transform: scale(1.05);
  }

  /* Custom hamburger icon that adapts to theme */
  .navbar-toggler-modern .navbar-toggler-icon {
    background-image: none !important;
    width: 20px;
    height: 2px;
    background-color: var(--dark);
    position: relative;
    transition: var(--transition);
  }

  .navbar-toggler-modern .navbar-toggler-icon::before,
  .navbar-toggler-modern .navbar-toggler-icon::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 2px;
    background-color: var(--dark);
    left: 0;
    transition: var(--transition);
  }

  .navbar-toggler-modern .navbar-toggler-icon::before {
    top: -6px;
  }

  .navbar-toggler-modern .navbar-toggler-icon::after {
    top: 6px;
  }

  /* Optional: Add animation when menu is open */
  .navbar-toggler-modern[aria-expanded="true"] .navbar-toggler-icon {
    background-color: transparent;
  }

  .navbar-toggler-modern[aria-expanded="true"] .navbar-toggler-icon::before {
    transform: rotate(45deg);
    top: 0;
  }

  .navbar-toggler-modern[aria-expanded="true"] .navbar-toggler-icon::after {
    transform: rotate(-45deg);
    top: 0;
  }
}

/* ===== DESKTOP STYLES ===== */
