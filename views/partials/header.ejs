<script>
// Theme toggle functionality for both mobile and desktop
function setupThemeToggle() {
  // Get both theme toggles
  const themeToggleMobile = document.getElementById('themeToggleMobile');
  const themeToggleDesktop = document.getElementById('themeToggleDesktop');
  
  // Function to toggle theme
  function toggleTheme() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    
    // Update all theme icons on the page
    updateThemeIcons(newTheme);
  }
  
  // Function to update all theme icons
  function updateThemeIcons(theme) {
    const allThemeIcons = document.querySelectorAll('#themeToggleMobile i, #themeToggleDesktop i');
    
    allThemeIcons.forEach(icon => {
      if (theme === 'dark') {
        icon.classList.remove('bi-moon-fill');
        icon.classList.add('bi-sun-fill');
      } else {
        icon.classList.remove('bi-sun-fill');
        icon.classList.add('bi-moon-fill');
      }
    });
  }
  
  // Add event listeners to both toggles
  if (themeToggleMobile) {
    themeToggleMobile.addEventListener('click', toggleTheme);
  }
  
  if (themeToggleDesktop) {
    themeToggleDesktop.addEventListener('click', toggleTheme);
  }
  
  // Initialize theme from localStorage
  const savedTheme = localStorage.getItem('theme') || 'light';
  document.documentElement.setAttribute('data-theme', savedTheme);
  updateThemeIcons(savedTheme);
}

// Mobile menu handling
function setupMobileMenu() {
  const navbarToggler = document.querySelector('.navbar-toggler-modern');
  const navbarCollapse = document.querySelector('.navbar-collapse-modern');
  
  if (navbarToggler && navbarCollapse) {
    navbarToggler.addEventListener('click', function() {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      
      if (isExpanded) {
        document.body.classList.remove('mobile-menu-open');
      } else {
        document.body.classList.add('mobile-menu-open');
      }
    });
    
    // Close mobile menu when clicking on regular nav links
    const navLinks = document.querySelectorAll('.nav-link-modern:not(.dropdown-toggle)');
    navLinks.forEach(link => {
      link.addEventListener('click', function() {
        if (window.innerWidth < 992) {
          navbarCollapse.classList.remove('show');
          document.body.classList.remove('mobile-menu-open');
          navbarToggler.setAttribute('aria-expanded', 'false');
        }
      });
    });
    
    // Close mobile menu when window is resized to desktop
    window.addEventListener('resize', function() {
      if (window.innerWidth >= 992) {
        document.body.classList.remove('mobile-menu-open');
      }
    });
  }
}

// Update the existing DOMContentLoaded event
document.addEventListener('DOMContentLoaded', function() {
  // Initialize notification system
  window.notificationSystem = new NotificationSystem();
  
  // Initialize theme toggles
  setupThemeToggle();
  
  // Initialize mobile menu
  setupMobileMenu();
});
</script>

<script>
// Simplified Notification System for Upcoming Tasks
class NotificationSystem {
  constructor() {
    this.checkInterval = null;
    this.isDropdownOpen = false;
    this.init();
  }

  init() {
    this.loadUpcomingTasks();
    this.setupEventListeners();
    
    this.checkInterval = setInterval(() => {
      this.loadUpcomingTasks();
    }, 30000); // Check every 30 seconds
  }

  async loadUpcomingTasks() {
    try {
      const upcomingTasks = await this.fetchUpcomingTasks();
      this.updateNotificationBadge(upcomingTasks);
      
      if (this.isDropdownOpen) {
        this.renderUpcomingTasks(upcomingTasks);
      }
    } catch (error) {
      console.error('Error loading upcoming tasks:', error);
    }
  }

  async fetchUpcomingTasks() {
    try {
      const response = await fetch('/tasks/upcoming?days=3&limit=5');
      if (response.ok) {
        return await response.json();
      }
      return [];
    } catch (error) {
      console.error('Error fetching upcoming tasks:', error);
      return [];
    }
  }

  updateNotificationBadge(upcomingTasks) {
    // Update both mobile and desktop badges
    const badgeMobile = document.getElementById('notificationBadgeMobile');
    const badgeDesktop = document.getElementById('notificationBadgeDesktop');
    
    const urgentTasks = upcomingTasks.filter(task => {
      const dueDate = new Date(task.due_date);
      const now = new Date();
      const daysUntilDue = Math.ceil((dueDate - now) / (1000 * 60 * 60 * 24));
      return daysUntilDue <= 1; // Only count urgent tasks (today/tomorrow)
    });
    
    if (urgentTasks.length > 0) {
      if (badgeMobile) {
        badgeMobile.textContent = urgentTasks.length;
        badgeMobile.style.display = 'block';
      }
      if (badgeDesktop) {
        badgeDesktop.textContent = urgentTasks.length;
        badgeDesktop.style.display = 'block';
      }
    } else {
      if (badgeMobile) badgeMobile.style.display = 'none';
      if (badgeDesktop) badgeDesktop.style.display = 'none';
    }
  }

  renderUpcomingTasks(tasks) {
    // Update both mobile and desktop notification lists
    const containerMobile = document.getElementById('notificationsListMobile');
    const containerDesktop = document.getElementById('notificationsListDesktop');
    
    const renderToContainer = (container) => {
      if (!container) return;
      
      if (tasks.length === 0) {
        container.innerHTML = `
          <div class="px-3 py-4 text-center text-muted">
            <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
            <div class="mt-2">No upcoming tasks</div>
            <small>You're all caught up!</small>
          </div>
        `;
        return;
      }

      let html = tasks.map((task, index) => {
        const dueDate = new Date(task.due_date);
        const now = new Date();
        const daysUntilDue = Math.ceil((dueDate - now) / (1000 * 60 * 60 * 24));
        
        let urgencyClass = '';
        let urgencyIcon = '';
        
        if (daysUntilDue <= 0) {
          urgencyClass = 'text-danger';
          urgencyIcon = 'bi-exclamation-triangle-fill';
        } else if (daysUntilDue === 1) {
          urgencyClass = 'text-warning';
          urgencyIcon = 'bi-exclamation-circle';
        } else {
          urgencyClass = 'text-info';
          urgencyIcon = 'bi-calendar-event';
        }
        
        return `
          <div class="notification-item p-3 border-bottom" style="${index === tasks.length - 1 ? 'border-bottom: none !important;' : ''}">
            <div class="d-flex align-items-start">
              <i class="bi ${urgencyIcon} ${urgencyClass} me-2 fs-5"></i>
              <div class="flex-grow-1">
                <h6 class="mb-1 fw-bold">${task.title}</h6>
                <div class="d-flex align-items-center gap-2 mb-1">
                  <span class="badge ${this.getPriorityBadgeClass(task.priority)}">
                    ${task.priority}
                  </span>
                  <small class="text-muted">${task.pet_name}</small>
                </div>
                <p class="mb-1 small">
                  <i class="bi bi-calendar me-1"></i>
                  ${dueDate.toLocaleDateString()} 
                  <span class="${urgencyClass} fw-bold">
                    (${daysUntilDue <= 0 ? 'TODAY' : `${daysUntilDue} day${daysUntilDue !== 1 ? 's' : ''} left`})
                  </span>
                </p>
              </div>
            </div>
          </div>
        `;
      }).join('');

      container.innerHTML = html;
    };

    renderToContainer(containerMobile);
    renderToContainer(containerDesktop);
  }

  getPriorityBadgeClass(priority) {
    const classes = {
      'high': 'bg-danger',
      'medium': 'bg-warning',
      'low': 'bg-success'
    };
    return classes[priority] || 'bg-secondary';
  }

  setupEventListeners() {
    // Dropdown open/close events for both mobile and desktop
    const dropdownMobile = document.getElementById('notificationDropdownMobile');
    const dropdownDesktop = document.getElementById('notificationDropdownDesktop');
    
    const setupDropdown = (dropdownElement) => {
      if (dropdownElement) {
        dropdownElement.addEventListener('show.bs.dropdown', () => {
          this.isDropdownOpen = true;
          this.loadUpcomingTasks();
        });

        dropdownElement.addEventListener('hide.bs.dropdown', () => {
          this.isDropdownOpen = false;
        });
      }
    };

    setupDropdown(dropdownMobile);
    setupDropdown(dropdownDesktop);
  }

  destroy() {
    if (this.checkInterval) {
      clearInterval(this.checkInterval);
    }
  }
}
</script>

