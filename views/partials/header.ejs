  }
  
  .nav-item-modern {
    margin: 0 0.25rem;
  }
  
  .nav-link-modern {
    padding: 0.8rem 1.2rem !important;
  }
  
  .header-icons.d-none.d-lg-flex {
    gap: 1rem;
  }
}

/* ===== EXTRA SMALL MOBILE STYLES (Below 576px) ===== */
