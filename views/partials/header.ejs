  .navbar-modern {
    padding: 0.8rem 0;
    position: relative;
  }

  .navbar-modern .container-fluid {
    padding: 0 2rem;
  }

  /* Hide mobile elements */
  .navbar-toggler-modern,
  .header-icons-mobile {
    display: none !important;
  }

  /* Desktop Navigation */
  .navbar-collapse-modern {
    position: static;
