    border-radius: 50px;
    background: rgba(67, 97, 238, 0.1);
    border: 1px solid rgba(67, 97, 238, 0.2);
    transition: var(--transition);
    text-decoration: none;
    color: var(--dark);
  }

  .header-icons-desktop .profile-modern:hover {
    background: rgba(67, 97, 238, 0.15);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(67, 97, 238, 0.15);
  }

  .header-icons-desktop .theme-toggle-modern,
  .header-icons-desktop .notification-bell {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(67, 97, 238, 0.1);
    border: 1px solid rgba(67, 97, 238, 0.2);
    color: var(--gray);
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-icons-desktop .theme-toggle-modern:hover,
  .header-icons-desktop .notification-bell:hover {
    background: rgba(67, 97, 238, 0.15);
    color: var(--primary);
    transform: scale(1.05);
  }

  /* Desktop Dropdowns */
  .header-icons-desktop .dropdown-menu {
    position: absolute !important;
    top: 100% !important;
    right: 0 !important;
    left: auto !important;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--glass-border);
    margin-top: 0.75rem;
    min-width: 250px;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
  }
}

/* ===== USER AVATAR STYLES ===== */
.user-avatar-modern {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: 2px solid var(--light);
