<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid white;
            object-fit: cover;
        }
        .stat-card {
            text-align: center;
            padding: 1.5rem;
            border-radius: 12px;
            background: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .bio-section {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <%- include('partials/header', {title: title }) %>
    
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <% if (userProfile.profile_picture_url) { %>
                        <img src="<%= userProfile.profile_picture_url %>" 
                             alt="<%= userProfile.username %>" 
                             class="profile-avatar"
                             onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                    <% } else { %>
                        <div class="profile-avatar bg-light d-flex align-items-center justify-content-center mx-auto">
                            <i class="bi bi-person text-muted" style="font-size: 3rem;"></i>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-8">
                    <h1 class="h2 mb-2"><%= userProfile.username %></h1>
                    <p class="mb-1">
                        <i class="bi bi-calendar-heart me-2"></i>
                        Pet care for <strong><%= petCareDuration %></strong>
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-people me-2"></i>
                        Community member since <%= new Date(userProfile.created_at).toLocaleDateString() %>
                    </p>
                </div>
                <div class="col-md-2 text-end">
                    <a href="/community" class="btn btn-light">
                        <i class="bi bi-arrow-left me-2"></i>Back to Community
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Stats -->
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="h3 text-primary mb-2"><%= userProfile.pet_count || 0 %></div>
                    <div class="text-muted">Pets</div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="h3 text-success mb-2"><%= userProfile.avg_pet_age ? parseFloat(userProfile.avg_pet_age).toFixed(1) : '0' %></div>
                    <div class="text-muted">Avg Pet Age</div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="h3 text-warning mb-2"><%= userPosts.length %></div>
                    <div class="text-muted">Community Posts</div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-card">
                    <div class="h3 text-info mb-2"><%= petCareDuration %></div>
                    <div class="text-muted">Experience</div>
                </div>
            </div>
        </div>

        <!-- Bio Section -->
        <% if (userProfile.bio && !userProfile.bio_requires_moderation) { %>
            <div class="bio-section">
                <h3 class="h4 mb-3">About <%= userProfile.username %></h3>
                <p class="mb-0" style="white-space: pre-wrap; line-height: 1.6;"><%= userProfile.bio %></p>
            </div>
        <% } else if (userProfile.bio_requires_moderation) { %>
            <div class="alert alert-info">
                <i class="bi bi-clock me-2"></i>
                <strong>Bio Pending Approval</strong>
                <p class="mb-0 mt-1">This user's bio is awaiting admin approval and will be visible soon.</p>
            </div>
        <% } %>

        <!-- Recent Posts -->
        <% if (userPosts.length > 0) { %>
            <div class="card">
                <div class="card-header">
                    <h3 class="h5 mb-0">Recent Community Posts</h3>
                </div>
                <div class="card-body">
                    <% userPosts.forEach(post => { %>
                        <div class="post-item mb-3 pb-3 border-bottom">
                            <h5 class="h6 mb-1"><%= post.title %></h5>
                            <p class="text-muted small mb-2">
                                <%= new Date(post.created_at).toLocaleDateString() %>
                                â€¢ <%= post.comment_count %> comments
                            </p>
                            <p class="mb-0"><%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-chat-dots display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Posts Yet</h4>
                <p class="text-muted"><%= userProfile.username %> hasn't posted in the community yet.</p>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>